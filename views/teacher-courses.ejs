              <% if (course.discountPercentage > 0) { %>
              <div class="price-wrapper">
                <span class="course-price-original-enhanced"><%= course.originalPrice %> EGP</span>
                <span class="course-price-current-enhanced"><%= course.finalPrice %> EGP</span>
              </div>
              <div class="savings-info">
                <span class="savings-amount">Save <%= course.originalPrice - course.finalPrice %> EGP</span>
              </div>
              <% } else { %>
              <div class="price-wrapper">
                <span class="course-price-current-enhanced"><%= course.finalPrice %> EGP</span>
              </div>
              <% } %>
            </div>

