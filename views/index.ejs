    border-radius: 12px;
    color: white;
    font-size: 1.3rem;
  }

  .gt-stat-content {
    display: flex;
    flex-direction: column;
  }

  .gt-stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: #121318;
  }

  .gt-stat-label {
    font-size: 0.85rem;
    color: #9c9c9c;
  }

  .dark-theme .gt-stat-number {
    color: #ffffff;
  }

  .gt-hero-cta {
