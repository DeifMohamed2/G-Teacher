      ctx.font = 'italic 15px Arial';
      ctx.textAlign = 'center';
      ctx.fillText('Generated by Elkably', canvas.width / 2, canvas.height - 12);

      // Convert canvas to image and share
      canvas.toBlob((blob) => {
        if (navigator.share && navigator.canShare && navigator.canShare({
            files: [new File([blob], 'score-result.png', {
              type: 'image/png'
            })]
          })) {
          const file = new File([blob], 'my-university-score-elkably.png', {
            type: 'image/png'
          });
          navigator.share({
            title: 'My University Admission Score - Elkably',
            text: `Check out my university admission score calculated with Elkably!`,
            files: [file]
          });
        } else {
          // Fallback: download image
          const link = document.createElement('a');
          link.download = 'my-university-score-elkably.png';
          link.href = canvas.toDataURL();
          link.click();
        }
      }, 'image/png');
    }

