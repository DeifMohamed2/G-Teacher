      cardGradient.addColorStop(0, 'rgba(255, 255, 255, 0.95)');
      cardGradient.addColorStop(0.5, 'rgba(248, 250, 252, 0.9)');
      cardGradient.addColorStop(1, 'rgba(255, 255, 255, 0.95)');

      ctx.fillStyle = cardGradient;
      ctx.strokeStyle = 'rgba(58, 146, 189, 0.15)';
      ctx.lineWidth = 3;

      // Draw main card with rounded corners and shadow effect
