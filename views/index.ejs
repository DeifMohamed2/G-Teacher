  let stepsVisited = [true, false, false, false, false];

  // Grade percentages
  const gradePercentages = {
    // O-Level Letters
    oLetterAStar: 100,
    oLetterA: 95,
    oLetterB: 85,
    oLetterC: 70,
    // O-Level Numeric
    oNum9: 100,
    oNum8: 100,
