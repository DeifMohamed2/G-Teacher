  // Add item to cart
  function addToCart(item) {
    // Check if user is logged in
    <% if (!user) { %>
    showCartNotification('Please login to add items to cart', 'error');
    setTimeout(() => {
      window.location.href = '/auth/login';
    }, 3500);
    return;
