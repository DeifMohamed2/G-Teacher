    oNum4: 70,
    // AS Levels
    asA: 95,
    asB: 85,
    asC: 70,
    asD: 70,
    // A-Levels
    aLevelAStar: 100,
    aLevelA: 95,
    aLevelB: 85,
    aLevelC: 70,
    aLevelD: 70
  };

  // Step input mappings for validation
  const stepInputs = {
    1: ['oLetterAStar', 'oLetterA', 'oLetterB', 'oLetterC'],
    2: ['oNum9', 'oNum8', 'oNum7', 'oNum6', 'oNum5', 'oNum4'],
    3: ['asA', 'asB', 'asC', 'asD'],
    4: ['aLevelAStar', 'aLevelA', 'aLevelB', 'aLevelC', 'aLevelD']
  };

  // Check if step has any input
  function stepHasInput(step) {
    if (step === 5) return true; // Results step always valid
    const inputs = stepInputs[step] || [];
    return inputs.some(id => {
      const input = document.getElementById(id);
      return input && parseInt(input.value) > 0;
    });
  }

  // Update slider value display
  function updateSliderValue(slider) {
    const valueDisplay = document.getElementById(slider.id + '-value');
    if (valueDisplay) {
      valueDisplay.textContent = slider.value;
      
      // Add/remove has-value class based on value
      if (parseInt(slider.value) > 0) {
        valueDisplay.classList.add('has-value');
      } else {
        valueDisplay.classList.remove('has-value');
      }
      
      // Add animation feedback
      valueDisplay.classList.add('slider-updated');
      setTimeout(() => valueDisplay.classList.remove('slider-updated'), 300);
    }
    
    // Update card visual state
    updateCardState(slider);
    
    // Update step completion status
    updateStepValidation();
  }

  // Adjust grade value (kept for backwards compatibility)
  function adjustGrade(inputId, delta) {
    const input = document.getElementById(inputId);
    if (!input) return;
    
    let value = parseInt(input.value) || 0;
    value = Math.max(0, Math.min(8, value + delta));
    input.value = value;
    
    // Update slider value display
    updateSliderValue(input);
  }
  
  // Update card visual state based on value
  function updateCardState(input) {
    const card = input.closest('.grade-input-card');
    if (card) {
      if (parseInt(input.value) > 0) {
        card.classList.add('has-value');
      } else {
        card.classList.remove('has-value');
      }
    }
  }

  // Update step validation UI
  function updateStepValidation() {
    const currentHasInput = stepHasInput(igcseCurrentStep);
    const validationMsg = document.getElementById('stepValidationMessage');
    
    // Update wizard steps UI
    updateWizardStepsUI();
  }

  // Update wizard steps visual state
  function updateWizardStepsUI() {
    const wizardSteps = document.querySelectorAll('.wizard-step');
    
    wizardSteps.forEach((stepEl, index) => {
      const stepNum = index + 1;
      
      stepEl.classList.remove('active', 'completed', 'locked', 'available');
      
      if (stepNum === igcseCurrentStep) {
        stepEl.classList.add('active');
      } else if (stepNum < igcseCurrentStep || stepsVisited[stepNum - 1]) {
        stepEl.classList.add('completed');
      } else if (stepNum === igcseCurrentStep + 1 || stepsVisited[stepNum - 2]) {
        stepEl.classList.add('available');
      } else {
        stepEl.classList.add('locked');
      }
    });
    
    // Update progress bar
    const progressFill = document.getElementById('wizardProgressFill');
    if (progressFill) {
      const progress = ((igcseCurrentStep - 1) / (igcseTotalSteps - 1)) * 100;
      progressFill.style.width = `${progress}%`;
    }
  }

  // Navigate to step with validation
  function goToStep(step, skipValidation = false) {
    if (step < 1 || step > igcseTotalSteps) return;
    
    // Can only go forward if current step is visited/skipped
    if (step > igcseCurrentStep && !skipValidation) {
      // Must visit all previous steps first
      for (let i = igcseCurrentStep; i < step; i++) {
        stepsVisited[i - 1] = true;
        stepsCompleted[i - 1] = stepHasInput(i);
      }
    }
    
    // Mark current step as visited
    stepsVisited[igcseCurrentStep - 1] = true;
    stepsCompleted[igcseCurrentStep - 1] = stepHasInput(igcseCurrentStep);

    // Hide all steps with animation
    document.querySelectorAll('.calculator-step').forEach(s => {
      s.classList.remove('active');
      s.style.display = 'none';
    });
    
    // Show target step
    const targetStep = document.getElementById(`step${step}`);
    if (targetStep) {
      targetStep.style.display = 'block';
      setTimeout(() => targetStep.classList.add('active'), 10);
    }

    // Mark new step as visited
    stepsVisited[step - 1] = true;
    igcseCurrentStep = step;

    // Update UI
    updateWizardStepsUI();

    // Calculate if on results step
    if (step === 5) {
      calculateIGCSEScore();
      animateScoreRing();
    }
    
    // Scroll to calculator section
    document.getElementById('score-calculator')?.scrollIntoView({ behavior: 'smooth', block: 'start' });
