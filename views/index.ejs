      });
      
      // Update progress bar
      const progressFill = document.getElementById('amProgressFill');
      if (progressFill) {
        const progressPercent = ((step - 1) / 3) * 100;
        progressFill.style.width = progressPercent + '%';
      }
      
      amCurrentStep = step;
