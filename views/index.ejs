  document.addEventListener('DOMContentLoaded', function() {
    // Team member data from server
    const teamMembers = <%- JSON.stringify(teamMembers || []) %>;

    if (teamMembers.length === 0) {
      return;
    }

    let currentMemberIndex = 0;
    const totalMembers = teamMembers.length;
    let isTransitioning = false;

    // Get DOM elements with new class names
    const prevBtn = document.getElementById('teamCarouselPrev');
    const nextBtn = document.getElementById('teamCarouselNext');
    const dots = document.querySelectorAll('.team-carousel-dots .team-dot');
    const carouselContainer = document.querySelector('.team-carousel-container-new');
    const allSlides = document.querySelectorAll('.team-member-slide');

    // Optimized function to show specific team member
    function showMember(index) {
      if (isTransitioning || index === currentMemberIndex) return;

      isTransitioning = true;

      // Hide all slides
      allSlides.forEach(slide => {
        slide.classList.remove('active');
      });

      // Show the selected slide
      const selectedSlide = document.querySelector(`.team-member-slide[data-index="${index}"]`);
      if (selectedSlide) {
        selectedSlide.classList.add('active');
      }

      // Update dots with CSS classes
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === index);
      });

      // Remove disabled state from buttons since carousel loops infinitely
      if (prevBtn) {
        prevBtn.classList.remove('disabled');
        prevBtn.disabled = false;
      }

      if (nextBtn) {
        nextBtn.classList.remove('disabled');
        nextBtn.disabled = false;
      }

      currentMemberIndex = index;

      // Reset transition flag
      requestAnimationFrame(() => {
        isTransitioning = false;
      });
    }

    // Navigation functions
    const nextMember = () => {
      if (totalMembers <= 1 || isTransitioning) return;
      const nextIndex = (currentMemberIndex + 1) % totalMembers;
      showMember(nextIndex);
    };

    const prevMember = () => {
      if (totalMembers <= 1 || isTransitioning) return;
      const prevIndex = (currentMemberIndex - 1 + totalMembers) % totalMembers;
      showMember(prevIndex);
    };

    // Initialize carousel
    function initCarousel() {
      if (totalMembers <= 1) {
        // Hide navigation if only one or no members
        if (prevBtn) prevBtn.style.display = 'none';
        if (nextBtn) nextBtn.style.display = 'none';
        const dotsContainer = document.getElementById('teamCarouselIndicators');
        if (dotsContainer) {
          dotsContainer.style.display = 'none';
        }
        return;
      }

      // Show first member
      showMember(0);
    }

    // Event listeners
    if (nextBtn) {
      nextBtn.addEventListener('click', nextMember, {
        passive: true
      });
    }

    if (prevBtn) {
      prevBtn.addEventListener('click', prevMember, {
        passive: true
      });
    }

    // Dot clicks
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        if (!isTransitioning) {
          showMember(index);
        }
      }, {
        passive: true
      });
    });

    // Keyboard navigation with focus check
    const handleKeydown = (e) => {
      if (carouselContainer && carouselContainer.contains(document.activeElement)) {
        if (e.key === 'ArrowLeft') {
          e.preventDefault();
          prevMember();
        } else if (e.key === 'ArrowRight') {
          e.preventDefault();
          nextMember();
        }
      }
    };

    document.addEventListener('keydown', handleKeydown, {
      passive: false
    });

    // Initialize carousel
    initCarousel();
  });

