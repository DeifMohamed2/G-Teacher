      ctx.font = 'bold 32px Arial';
      ctx.textAlign = 'left';
      ctx.textBaseline = 'top';
      ctx.fillText('Final Score', headerX, headerY - 10);

      // Medal icon next to title (not overlapping)
      ctx.fillStyle = '#3a92bd';
      ctx.font = 'bold 36px Arial';
      ctx.textAlign = 'left';
      ctx.textBaseline = 'top';

      // Add glow to medal
      ctx.shadowColor = 'rgba(58, 146, 189, 0.3)';
      ctx.shadowBlur = 8;
      const titleWidth = ctx.measureText('Final Score').width;
      ctx.fillText('', headerX + titleWidth + 15, headerY - 5);
      ctx.shadowColor = 'transparent';
      ctx.shadowBlur = 0;

      // University type with better styling (below title)
      ctx.fillStyle = '#64748b';
      ctx.font = '18px Arial';
      ctx.textAlign = 'left';
      ctx.textBaseline = 'top';
      ctx.fillText(config.name, headerX, headerY + 35);

      // Score display section (centered, well-spaced) - Enhanced design
      const centerX = canvas.width / 2;
      const scoreY = 340; // Moved down to prevent overlap

      // Score background circle with gradient (subtle)
      const scoreCircleGradient = ctx.createRadialGradient(centerX, scoreY, 0, centerX, scoreY, 90);
      scoreCircleGradient.addColorStop(0, 'rgba(58, 146, 189, 0.08)');
      scoreCircleGradient.addColorStop(0.5, 'rgba(58, 146, 189, 0.04)');
      scoreCircleGradient.addColorStop(1, 'rgba(58, 146, 189, 0.01)');

      ctx.beginPath();
      ctx.arc(centerX, scoreY, 90, 0, 2 * Math.PI);
      ctx.fillStyle = scoreCircleGradient;
      ctx.fill();

      // Score value with enhanced gradient - properly spaced
      const scoreGradient = ctx.createLinearGradient(centerX - 120, scoreY - 50, centerX + 120, scoreY + 50);
      scoreGradient.addColorStop(0, '#3a92bd');
      scoreGradient.addColorStop(0.5, '#0c5374');
      scoreGradient.addColorStop(1, '#3a92bd');

      ctx.fillStyle = scoreGradient;
      ctx.font = 'bold 96px Arial';
      ctx.textAlign = 'center';
      ctx.textBaseline = 'middle';

      // Add glow effect
      ctx.shadowColor = 'rgba(58, 146, 189, 0.4)';
      ctx.shadowBlur = 20;
      ctx.shadowOffsetX = 0;
      ctx.shadowOffsetY = 0;

      // Draw score with percentage sign - properly calculated spacing
      const scoreText = calculationData.finalScore.toFixed(2);
      const scoreWidth = ctx.measureText(scoreText).width;

      // Draw score number
      ctx.fillText(scoreText, centerX - 25, scoreY);

      // Add percentage sign with proper spacing (not overlapping)
      ctx.font = 'bold 54px Arial';
      ctx.fillText('%', centerX + scoreWidth / 2 + 20, scoreY);

      // Reset shadow
      ctx.shadowColor = 'transparent';
      ctx.shadowBlur = 0;

      // Enhanced score breakdown section - Better structured and spaced
      const breakdownY = 460; // Moved down to prevent overlap with score

      // Breakdown background with gradient
      const breakdownGradient = ctx.createLinearGradient(180, breakdownY, canvas.width - 180, breakdownY + 240);
      breakdownGradient.addColorStop(0, 'rgba(255, 255, 255, 0.7)');
      breakdownGradient.addColorStop(0.5, 'rgba(248, 250, 252, 0.6)');
      breakdownGradient.addColorStop(1, 'rgba(255, 255, 255, 0.7)');

      ctx.fillStyle = breakdownGradient;
      ctx.strokeStyle = 'rgba(58, 146, 189, 0.12)';
      ctx.lineWidth = 2;
      ctx.beginPath();
      ctx.roundRect(180, breakdownY, canvas.width - 360, 240, 18);
      ctx.fill();
      ctx.stroke();

      // Breakdown header
      ctx.fillStyle = '#64748b';
      ctx.font = 'bold 16px Arial';
      ctx.textAlign = 'left';
      ctx.textBaseline = 'top';
      ctx.fillText('Score Breakdown', 200, breakdownY + 20);

      // Breakdown items with proper spacing and styling
      const examNames = {
        'EST': 'EST',
        'SAT': 'SAT',
