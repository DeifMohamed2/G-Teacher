      showAllBtn.onclick = () => {
        isExpanded = !isExpanded;
        renderColleges(searchInput.value);
      };

      // Search handler
      searchInput.oninput = (e) => {
        renderColleges(e.target.value);
      };

      // Show the card
      availableCollegesCard.style.display = 'block';
    }

