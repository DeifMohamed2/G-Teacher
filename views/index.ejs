      ctx.fillRect(0, 0, canvas.width, canvas.height);

      // Add subtle grid pattern with enhanced opacity
      ctx.strokeStyle = 'rgba(58, 146, 189, 0.06)';
      ctx.lineWidth = 1;
      for (let i = 0; i < canvas.width; i += 40) {
        ctx.beginPath();
        ctx.moveTo(i, 0);
        ctx.lineTo(i, canvas.height);
        ctx.stroke();
      }
      for (let i = 0; i < canvas.height; i += 40) {
        ctx.beginPath();
        ctx.moveTo(0, i);
        ctx.lineTo(canvas.width, i);
        ctx.stroke();
      }

