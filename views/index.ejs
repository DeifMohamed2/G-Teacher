<script>
  // Grade percentages configuration
  const gradePercentages = {
    // O-Level Letters
    oLetterAStar: 100,
    oLetterA: 95,
    oLetterB: 85,
    oLetterC: 70,
    // O-Level Numeric
    oNum9: 100,
    oNum8: 100,
    oNum7: 95,
    oNum6: 88,
    oNum5: 82,
    oNum4: 70,
    // AS Levels
    asA: 95,
    asB: 85,
    asC: 70,
    asD: 70,
    // A-Levels
    aLevelAStar: 100,
    aLevelA: 95,
    aLevelB: 85,
    aLevelC: 70,
    aLevelD: 70
  };

  // Update slider value and calculate IGCSE score in real-time
  function updateCalcSlider(slider) {
    const valueDisplay = document.getElementById(slider.id + '-value');
    if (valueDisplay) {
      valueDisplay.textContent = slider.value;
    }
    calculateIGCSEScore();
  }

  // Calculate IGCSE Score - runs automatically on slider change
  function calculateIGCSEScore() {
    let totalPercentage = 0;
    let totalSubjects = 0;

    // Sum all grades
    Object.keys(gradePercentages).forEach(id => {
      const input = document.getElementById(id);
      if (input) {
        const count = parseInt(input.value) || 0;
        if (count > 0) {
          totalPercentage += gradePercentages[id] * count;
          totalSubjects += count;
        }
      }
    });

    // Calculate average percentage
    const averagePercentage = totalSubjects > 0 ? (totalPercentage / totalSubjects) : 0;
    const numericScore = averagePercentage * 4.10 / 100; // Convert to approximately 4.10 scale

    // Update IGCSE results
    const percentageResult = document.getElementById('igcsePercentageResult');
    const numericResult = document.getElementById('igcseNumericResult');
    
    if (percentageResult) percentageResult.value = averagePercentage.toFixed(2);
    if (numericResult) numericResult.value = numericScore.toFixed(2);
  }

  // Calculate EST & GPA Score
  function calculateESTScore() {
    const choice = document.getElementById('estChoice')?.value || 'first';
    const est1 = parseFloat(document.getElementById('est1Score')?.value) || 0;
    const est2 = parseFloat(document.getElementById('est2Score')?.value) || 0;
    const gpa = parseFloat(document.getElementById('gpaScore')?.value) || 0;
    
    // EST weight multipliers based on choice
    const weights = {
      first: { est: 0.30, gpa: 0.70 },
      second: { est: 0.35, gpa: 0.65 },
      third: { est: 0.40, gpa: 0.60 }
    };
    
    const weight = weights[choice] || weights.first;
    
    // Calculate EST component (average of EST1 and EST2 if EST2 exists)
    let estScore = 0;
    if (est1 > 0 && est2 > 0) {
      estScore = (est1 + est2) / 2;
    } else if (est1 > 0) {
      estScore = est1;
    }
    
    // Normalize EST score to percentage (out of 1600)
    const estPercentage = (estScore / 1600) * 100;
    
    // Normalize GPA to percentage (out of 4)
    const gpaPercentage = (gpa / 4) * 100;
    
    // Calculate weighted score
    let calculatedValue = 0;
    if (estScore > 0 && gpa > 0) {
      calculatedValue = (estPercentage * weight.est) + (gpaPercentage * weight.gpa);
    } else if (gpa > 0) {
      calculatedValue = gpaPercentage;
    } else if (estScore > 0) {
      calculatedValue = estPercentage;
    }
    
    // Update result
    const resultField = document.getElementById('estCalculatedValue');
    if (resultField) {
      resultField.value = calculatedValue > 0 ? calculatedValue.toFixed(2) + '%' : '';
    }
  }

  // Initialize calculators on DOM load
  document.addEventListener('DOMContentLoaded', function() {
    // Add input listeners for all IGCSE sliders
    Object.keys(gradePercentages).forEach(id => {
      const input = document.getElementById(id);
      if (input) {
        input.addEventListener('input', function() {
          updateCalcSlider(this);
        });
      }
    });
    
    // Initialize EST calculator listeners
    const estInputs = ['estChoice', 'est1Score', 'est2Score', 'gpaScore'];
    estInputs.forEach(id => {
      const input = document.getElementById(id);
      if (input) {
        input.addEventListener('input', calculateESTScore);
        input.addEventListener('change', calculateESTScore);
      }
    });
  });
</script>

