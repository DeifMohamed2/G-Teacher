      if (exam2Type) exam2Type.value = '';
      const exam2ScoreGroup = document.getElementById('amExam2ScoreGroup');
      if (exam2ScoreGroup) exam2ScoreGroup.style.display = 'none';
      
      // Go back to step 1
      goToAmStep(1);
      
      // Disable next buttons
      document.getElementById('amNextStep1').disabled = true;
      document.getElementById('amNextStep2').disabled = true;
      document.getElementById('amNextStep3').disabled = true;
    }
  })();
