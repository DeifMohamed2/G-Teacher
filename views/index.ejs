      brandGradient.addColorStop(0.5, '#0c5374');
      brandGradient.addColorStop(1, '#3a92bd');

      ctx.fillStyle = brandGradient;
      ctx.font = 'bold 42px Arial';
      ctx.textAlign = 'center';
      ctx.textBaseline = 'middle';

      // Add text shadow effect
      ctx.shadowColor = 'rgba(58, 146, 189, 0.3)';
      ctx.shadowBlur = 10;
      ctx.shadowOffsetX = 0;
      ctx.shadowOffsetY = 2;
      ctx.fillText('Elkably', brandX, brandY);

      // Reset shadow
