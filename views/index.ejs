      stepItems.forEach((item, index) => {
        const stepNumber = index + 1;
        item.classList.remove('active', 'completed', 'disabled');

        // Determine if step is accessible
        const isAccessible =
          stepNumber === 1 ||
          (stepNumber === 2 && selectedUniversityType) ||
          (stepNumber === 3 && selectedUniversityType && selectedExamType) ||
          (stepNumber === 4 && selectedUniversityType && selectedExamType &&
            parseFloat(exam1Input?.value) > 0 && parseFloat(gpaInput?.value) > 0);

        if (stepNumber === currentStep) {
          item.classList.add('active');
        } else if (stepNumber < currentStep) {
          item.classList.add('completed');
        } else if (!isAccessible) {
          item.classList.add('disabled');
        }
      });
    }

