      const showMoreBtn = document.getElementById('showMoreBtn');
      const fullScore = score.toString();

      // Check if score has more than 3 decimal places
      const decimalPart = fullScore.split('.')[1] || '';

      if (decimalPart.length > 3) {
        // Store full score in data attribute
        element.setAttribute('data-full-score', fullScore);
        element.setAttribute('data-is-expanded', 'false');

        // Show only first 3 decimals initially
        const shortScore = parseFloat(score).toFixed(3);
        element.textContent = shortScore;

        // Show the "Show More" button
        if (showMoreBtn) {
          showMoreBtn.style.display = 'flex';

          // Remove any existing event listeners
          const newBtn = showMoreBtn.cloneNode(true);
          showMoreBtn.parentNode.replaceChild(newBtn, showMoreBtn);

          // Add new event listener
          newBtn.addEventListener('click', function() {
            const isExpanded = element.getAttribute('data-is-expanded') === 'true';

            if (isExpanded) {
              // Show short version
              element.textContent = parseFloat(score).toFixed(3);
              element.setAttribute('data-is-expanded', 'false');
              newBtn.querySelector('.show-more-text').textContent = 'Show More';
              newBtn.classList.remove('expanded');

              // Reset any inline styles and classes
              element.style.fontSize = '';
              element.classList.remove('long-number');
            } else {
              // Show full version
              element.textContent = fullScore;
              element.setAttribute('data-is-expanded', 'true');
              newBtn.querySelector('.show-more-text').textContent = 'Show Less';
              newBtn.classList.add('expanded');

              // Add class for long numbers
              if (fullScore.length > 15) {
                element.classList.add('long-number');
              }

              // Adjust font size dynamically based on length and screen size
              const screenWidth = window.innerWidth;
              const numberLength = fullScore.length;

              if (screenWidth <= 480) {
                // Extra small screens (phones in portrait)
                if (numberLength > 20) {
                  element.style.fontSize = '1.2em';
                } else if (numberLength > 15) {
                  element.style.fontSize = '1.4em';
                } else {
                  element.style.fontSize = '1.8em';
                }
              } else if (screenWidth <= 768) {
                // Small screens (phones in landscape, small tablets)
                if (numberLength > 20) {
                  element.style.fontSize = '1.5em';
                } else if (numberLength > 15) {
                  element.style.fontSize = '1.8em';
                } else {
                  element.style.fontSize = '2.2em';
                }
              } else if (screenWidth <= 1024) {
                // Medium screens (tablets)
                if (numberLength > 20) {
                  element.style.fontSize = '2em';
                } else if (numberLength > 15) {
                  element.style.fontSize = '2.5em';
                }
              }
            }
          });
        }
      } else {
        // If 3 or fewer decimals, just show normally
        element.textContent = parseFloat(score).toFixed(2);
        element.removeAttribute('data-full-score');
        element.removeAttribute('data-is-expanded');

        // Hide the button
        if (showMoreBtn) {
          showMoreBtn.style.display = 'none';
        }
      }
    }

