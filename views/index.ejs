        gpa: 0,
        finalScore: 0,
        breakdown: {
          exam1Score: 0,
          exam2Score: 0,
          gpaScore: 0
        }
      };

      // Reset show more button
      const showMoreBtn = document.getElementById('showMoreBtn');
      if (showMoreBtn) {
        showMoreBtn.style.display = 'none';
        showMoreBtn.classList.remove('expanded');
        const showMoreText = showMoreBtn.querySelector('.show-more-text');
        if (showMoreText) {
          showMoreText.textContent = 'Show More';
        }
      }

      // Reset calculated value
      if (calculatedValue) {
        calculatedValue.textContent = '0.00';
        calculatedValue.removeAttribute('data-full-score');
        calculatedValue.removeAttribute('data-is-expanded');
      }

      // Hide available colleges card
      const availableCollegesCard = document.getElementById('availableCollegesCard');
      if (availableCollegesCard) {
        availableCollegesCard.style.display = 'none';
      }

      // Clear search input
      const collegesSearch = document.getElementById('collegesSearch');
      if (collegesSearch) {
        collegesSearch.value = '';
      }
    }

    // Initialize calculator
    initCalculator();
  });
</script>

