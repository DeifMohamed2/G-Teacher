  }

  // Get grade label based on percentage
  function getGradeLabel(percentage) {
    if (percentage >= 90) return { letter: 'A*', text: 'Outstanding!' };
    if (percentage >= 80) return { letter: 'A', text: 'Excellent!' };
    if (percentage >= 70) return { letter: 'B', text: 'Very Good!' };
    if (percentage >= 60) return { letter: 'C', text: 'Good' };
    if (percentage >= 50) return { letter: 'D', text: 'Satisfactory' };
    return { letter: 'E', text: 'Needs Work' };
  }

  // Calculate IGCSE Score
  function calculateIGCSEScore() {
    let totalPercentage = 0;
    let totalSubjects = 0;
    let oLettersCount = 0;
    let oNumericCount = 0;
    let asCount = 0;
    let aLevelCount = 0;

    // O-Level Letters
    ['oLetterAStar', 'oLetterA', 'oLetterB', 'oLetterC'].forEach(id => {
      const count = parseInt(document.getElementById(id)?.value) || 0;
      if (count > 0) {
        totalPercentage += gradePercentages[id] * count;
        totalSubjects += count;
        oLettersCount += count;
      }
    });

    // O-Level Numeric
    ['oNum9', 'oNum8', 'oNum7', 'oNum6', 'oNum5', 'oNum4'].forEach(id => {
