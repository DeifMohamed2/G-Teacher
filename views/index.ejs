    // Display available colleges based on score
    function displayAvailableColleges(userScore) {
      const availableCollegesCard = document.getElementById('availableCollegesCard');
      const collegesList = document.getElementById('collegesList');
      const collegesCount = document.getElementById('collegesCount');
      const showAllBtn = document.getElementById('showAllCollegesBtn');
      const searchInput = document.getElementById('collegesSearch');

      if (!availableCollegesCard || !collegesList) return;

      // Only show colleges for Government University
      if (selectedUniversityType !== 'government') {
        availableCollegesCard.style.display = 'none';
        return;
      }

      // Filter colleges where user score >= minimum score
      const availableColleges = collegesData.filter(college => userScore >= college.minScore);

      if (availableColleges.length === 0) {
        collegesList.innerHTML = `
          <div class="no-colleges-message">
            <i class="fas fa-graduation-cap"></i>
            <p>Unfortunately, no colleges are available with this score</p>
            <p style="font-size: 0.9em; color: #94a3b8;">Try to improve your score for better options</p>
          </div>
        `;
        availableCollegesCard.style.display = 'block';
        collegesCount.textContent = 'No colleges available';
        showAllBtn.style.display = 'none';
        return;
      }

      // Update count
      collegesCount.textContent = `${availableColleges.length} colleges available based on your score`;

      // Display colleges (show first 10 initially)
      let displayLimit = 10;
      let isExpanded = false;

      function renderColleges(searchTerm = '') {
        let filteredColleges = availableColleges;

        if (searchTerm) {
          filteredColleges = availableColleges.filter(college =>
            college.name.includes(searchTerm)
          );
        }

        const collegesToShow = isExpanded ? filteredColleges : filteredColleges.slice(0, displayLimit);

        if (filteredColleges.length === 0) {
          collegesList.innerHTML = `
            <div class="no-colleges-message">
              <i class="fas fa-search"></i>
              <p>No search results found</p>
            </div>
          `;
          showAllBtn.style.display = 'none';
          return;
        }

        collegesList.innerHTML = collegesToShow.map((college, index) => {
          const isHighlighted = index < 5; // Highlight top 5
          return `
            <div class="college-item ${isHighlighted ? 'highlighted' : ''}" data-college="${college.name}">
              <span class="college-name">${college.name}</span>
              <span class="college-score">${college.minScore.toFixed(2)}</span>
            </div>
          `;
        }).join('');

        // Show/hide "Show All" button
        if (filteredColleges.length > displayLimit && !searchTerm) {
          showAllBtn.style.display = 'flex';
          showAllBtn.querySelector('.show-all-text').textContent = isExpanded ? 'Show Less' : `Show All Colleges (${filteredColleges.length})`;
          showAllBtn.classList.toggle('expanded', isExpanded);
        } else {
          showAllBtn.style.display = 'none';
        }
      }

      // Initial render
      renderColleges();

      // Show all button handler
      showAllBtn.onclick = () => {
        isExpanded = !isExpanded;
        renderColleges(searchInput.value);
      };

      // Search handler
      searchInput.oninput = (e) => {
        renderColleges(e.target.value);
      };

      // Show the card
      availableCollegesCard.style.display = 'block';
    }

