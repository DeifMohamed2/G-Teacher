    function updateAmNextButton(step) {
      let canProceed = false;
      
      if (step === 1) {
        canProceed = amUniversityType !== null;
        const btn = document.getElementById('amNextStep1');
        if (btn) btn.disabled = !canProceed;
      } else if (step === 2) {
        canProceed = amExamType !== null;
        const btn = document.getElementById('amNextStep2');
        if (btn) btn.disabled = !canProceed;
      } else if (step === 3) {
        const exam1 = parseFloat(document.getElementById('amExam1Score')?.value) || 0;
        const gpa = parseFloat(document.getElementById('amGpaScore')?.value) || 0;
        canProceed = exam1 > 0 && gpa > 0;
        const btn = document.getElementById('amNextStep3');
        if (btn) btn.disabled = !canProceed;
      }
    }
    
    function calculateAmericanScore() {
      let exam1Score = parseFloat(document.getElementById('amExam1Score')?.value) || 0;
      let exam2Score = parseFloat(document.getElementById('amExam2Score')?.value) || 0;
      const gpa = parseFloat(document.getElementById('amGpaScore')?.value) || 0;
      const exam2Type = document.getElementById('amExam2Type')?.value;
      const useExam2 = exam2Type && exam2Type !== 'NONE' && exam2Score > 0;
      
      // Store original scores for breakdown
      const originalExam1 = exam1Score;
      const originalExam2 = exam2Score;
      
      // Convert ACT to SAT equivalent (1600 scale)
      if (amExamType === 'ACT') {
        exam1Score = convertActToSat(exam1Score);
      }
      if (exam2Type === 'ACT' && useExam2) {
        exam2Score = convertActToSat(exam2Score);
      }
      
      // Calculate exam score (average if using both, otherwise just exam1)
      let examScore = exam1Score;
      if (useExam2 && exam2Score > 0) {
        examScore = (exam1Score + exam2Score) / 2;
      }
      
      // Calculate multiplier based on university type and score threshold
      let multiplier;
      if (amUniversityType === 'government') {
        // Public university: 69/1600 if score >= 1090, else 75/1600
        multiplier = examScore >= 1090 ? (69 / 1600) : (75 / 1600);
      } else {
        // Private/Ahlia university: 75/1600
        multiplier = 75 / 1600;
      }
      
      // Calculate final score
      const examComponent = examScore * multiplier;
      const gpaComponent = gpa * (100 - (multiplier * 1600)) / 4;
      const finalScore = examComponent + gpaComponent;
      
      // Update results display
      document.getElementById('amCalculatedValue').textContent = finalScore.toFixed(2);
      
      // Update university type display
      const universityNames = {
        'government': 'Government University',
        'private': 'Private University',
        'ahlia': 'Ahlia University'
      };
      document.getElementById('amSelectedUniversityType').textContent = universityNames[amUniversityType] || '';
      
      // Update breakdown
      document.getElementById('amExam1BreakdownLabel').textContent = amExamType + ' Score:';
      document.getElementById('amExam1Breakdown').textContent = originalExam1;
      
      if (useExam2) {
        document.getElementById('amExam2BreakdownItem').style.display = 'flex';
        document.getElementById('amExam2BreakdownLabel').textContent = exam2Type + ' Score:';
        document.getElementById('amExam2Breakdown').textContent = originalExam2;
      } else {
        document.getElementById('amExam2BreakdownItem').style.display = 'none';
      }
      
      document.getElementById('amGpaBreakdown').textContent = gpa.toFixed(2);
      
      // Show colleges section for government universities
      const collegesCard = document.getElementById('amAvailableCollegesCard');
      if (collegesCard) {
        collegesCard.style.display = amUniversityType === 'government' ? 'block' : 'none';
      }
      
      // Populate colleges list
      if (amUniversityType === 'government') {
        populateColleges(finalScore);
      }
      
      // Go to results step
      goToAmStep(4);
    }
    
    function convertActToSat(actScore) {
      // ACT to SAT conversion table (approximate)
      const conversionTable = {
        36: 1600, 35: 1570, 34: 1530, 33: 1500, 32: 1470,
        31: 1430, 30: 1400, 29: 1370, 28: 1340, 27: 1310,
        26: 1280, 25: 1250, 24: 1210, 23: 1180, 22: 1150,
        21: 1110, 20: 1080, 19: 1040, 18: 1010, 17: 970,
        16: 930, 15: 890, 14: 850, 13: 810, 12: 770, 11: 730
      };
      
      const roundedAct = Math.round(actScore);
      return conversionTable[roundedAct] || Math.round((actScore / 36) * 1600);
    }
    
    function populateColleges(userScore) {
      const collegesList = document.getElementById('amCollegesList');
      const collegesCount = document.getElementById('amCollegesCount');
      if (!collegesList) return;
      
      collegesList.innerHTML = '';
      let eligibleCount = 0;
      
      collegesData.forEach(college => {
        const isEligible = userScore >= college.score;
        if (isEligible) eligibleCount++;
        
        const collegeItem = document.createElement('div');
        collegeItem.className = 'am-college-item' + (isEligible ? ' highlighted' : '');
        collegeItem.innerHTML = `
          <span class="am-college-score">${college.score}%</span>
          <span class="am-college-name">${college.name}</span>
        `;
        collegesList.appendChild(collegeItem);
      });
      
      if (collegesCount) {
        collegesCount.textContent = eligibleCount + ' colleges available based on your score';
      }
    }
    
    function filterColleges(searchTerm) {
      const items = document.querySelectorAll('.am-college-item');
      items.forEach(item => {
        const name = item.querySelector('.am-college-name')?.textContent.toLowerCase() || '';
        item.style.display = name.includes(searchTerm.toLowerCase()) ? 'flex' : 'none';
      });
    }
    
    function resetAmCalculator() {
      // Reset selections
      amUniversityType = null;
      amExamType = null;
      
      // Clear selections
      document.querySelectorAll('.am-university-option, .am-exam-option').forEach(o => o.classList.remove('selected'));
      
      // Clear inputs
      ['amExam1Score', 'amExam2Score', 'amGpaScore'].forEach(id => {
        const input = document.getElementById(id);
