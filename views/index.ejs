      ctx.shadowBlur = 0;
      ctx.shadowOffsetX = 0;
      ctx.shadowOffsetY = 0;

      // Subtitle with enhanced styling
      ctx.fillStyle = '#64748b';
      ctx.font = '20px Arial';
      ctx.textAlign = 'center';
      ctx.fillText('University Score Calculator', brandX, brandY + 35);

      // Enhanced main results card background
