<!-- Language Switching JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const langToggle = document.getElementById('langToggle');
  const privacyContentSection = document.querySelector('.privacy-content-section');
  
  // Get saved language or default to English
  let currentLang = localStorage.getItem('privacyLang') || 'en';
  
  // Apply initial language (this will set button to opposite language correctly)
  applyLanguage(currentLang);
  
  // Language toggle click handler
  if (langToggle) {
    langToggle.addEventListener('click', function() {
      currentLang = currentLang === 'en' ? 'ar' : 'en';
      localStorage.setItem('privacyLang', currentLang);
      applyLanguage(currentLang);
    });
  }
  
  function applyLanguage(lang) {
    // Update button text - Show opposite language name
    if (langToggle) {
      if (lang === 'ar') {
        // When Arabic is selected, show "English" button
        langToggle.querySelector('.lang-text').textContent = 'English';
        langToggle.querySelector('.lang-code').textContent = 'EN';
        langToggle.setAttribute('data-lang', 'ar');
        // Apply RTL only to content body
        const privacyContentBody = document.getElementById('privacyContentBody');
        if (privacyContentBody) {
          privacyContentBody.classList.add('rtl');
          document.querySelector('.privacy-content-card')?.classList.add('rtl');
        }
      } else {
        // When English is selected, show "Arabic" button
        langToggle.querySelector('.lang-text').textContent = 'العربية';
        langToggle.querySelector('.lang-code').textContent = 'AR';
        langToggle.setAttribute('data-lang', 'en');
        // Remove RTL from content body
        const privacyContentBody = document.getElementById('privacyContentBody');
        if (privacyContentBody) {
          privacyContentBody.classList.remove('rtl');
          document.querySelector('.privacy-content-card')?.classList.remove('rtl');
        }
      }
    }
    
    // Update all elements with data attributes
    const elementsToUpdate = document.querySelectorAll('[data-english][data-arabic]');
    elementsToUpdate.forEach(element => {
      const text = lang === 'ar' ? element.getAttribute('data-arabic') : element.getAttribute('data-english');
      element.textContent = text;
    });
  }
});
</script>

