<!-- Language Switching JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const langToggle = document.getElementById('langToggle');
  const legalContentBody = document.getElementById('termsContentBody');
  const legalContentCard = document.querySelector('.legal-content-card');
  const legalPageHeader = document.querySelector('.legal-page-header');
  
  let currentLang = localStorage.getItem('legalLang') || 'en';
  applyLanguage(currentLang);
  
  if (langToggle) {
    langToggle.addEventListener('click', function() {
      currentLang = currentLang === 'en' ? 'ar' : 'en';
      localStorage.setItem('legalLang', currentLang);
      applyLanguage(currentLang);
    });
  }
  
  function applyLanguage(lang) {
    const isArabic = lang === 'ar';
    
    if (langToggle) {
      langToggle.querySelector('.lang-text').textContent = isArabic ? 'English' : 'العربية';
      langToggle.querySelector('.lang-code').textContent = isArabic ? 'EN' : 'AR';
      langToggle.setAttribute('data-lang', lang);
    }
    
    // Apply RTL classes
    [legalContentBody, legalContentCard, legalPageHeader].forEach(el => {
      if (el) {
        el.classList.toggle('rtl', isArabic);
      }
    });
    
    // Update document direction
    document.documentElement.setAttribute('dir', isArabic ? 'rtl' : 'ltr');
    document.documentElement.setAttribute('lang', isArabic ? 'ar' : 'en');
    
    // Update all translatable elements
    document.querySelectorAll('[data-english][data-arabic]').forEach(element => {
      const text = isArabic ? element.getAttribute('data-arabic') : element.getAttribute('data-english');
      element.textContent = text;
    });
  }
});
</script>

