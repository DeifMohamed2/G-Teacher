        // Extract variables from message template
        function extractVariables(message) {
            const variableRegex = /\{\{([^}]+)\}\}/g;
            const variables = [];
            let match;
            
            while ((match = variableRegex.exec(message)) !== null) {
                if (!variables.includes(match[1])) {
                    variables.push(match[1]);
                }
            }
            
            return variables;
        }

