                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                showNotification('An error occurred while saving', 'error');
            })
            .finally(() => {
                saveBtn.innerHTML = originalText;
                saveBtn.disabled = false;
            });
        }
        
