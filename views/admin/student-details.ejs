          exportBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Exporting...';
          exportBtn.disabled = true;

          // Reset button after a delay
          setTimeout(() => {
            exportBtn.innerHTML = originalText;
            exportBtn.disabled = false;
          }, 3000);
        }

        // Create comprehensive export URL for Excel
        const url = new URL(window.location);
        url.pathname = `/admin/students/${studentId}/export`;
        url.searchParams.set('format', 'excel');
        url.searchParams.set('comprehensive', 'true');
        url.searchParams.set('includeAnalytics', 'true');

        // Create a temporary link to trigger download
        const link = document.createElement('a');
        link.href = url.toString();
        link.download = `student_${studentCode}_comprehensive_report_${new Date().toISOString().split('T')[0]}.xlsx`;
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
      } catch (error) {
        console.error('Error exporting student data:', error);
        // Reset button on error
        const exportBtn = document.querySelector('.btn-primary');
        if (exportBtn) {
          exportBtn.innerHTML = '<i class="fas fa-file-excel"></i> Export Excel Report';
          exportBtn.disabled = false;
        }
      }
    }

    // Toggle course content
    function toggleCourse(index) {
      const content = document.getElementById(`content-${index}`);
      const toggle = document.getElementById(`toggle-${index}`);

      if (content && toggle) {
        if (content.classList.contains('collapsed')) {
          // Expand
          content.classList.remove('collapsed');
          toggle.classList.remove('collapsed');
        } else {
          // Collapse
          content.classList.add('collapsed');
          toggle.classList.add('collapsed');
        }
      }
    }

    // Toggle topic content details
    function toggleTopic(courseIndex, topicIndex) {
      const topicContentDetails = document.getElementById(`topic-content-${courseIndex}-${topicIndex}`);
      const topicToggle = document.getElementById(`topic-toggle-${courseIndex}-${topicIndex}`);

      if (topicContentDetails && topicToggle) {
        if (topicContentDetails.classList.contains('show')) {
          // Collapse
          topicContentDetails.classList.remove('show');
          topicToggle.classList.add('collapsed');
        } else {
          // Expand
          topicContentDetails.classList.add('show');
          topicToggle.classList.remove('collapsed');
        }
      }
    }

    // Search courses and topics
    function searchCoursesAndTopics() {
      const searchInput = document.getElementById('courseSearch');
      if (!searchInput) return;
      
      const searchTerm = searchInput.value.toLowerCase().trim();

      const courseCards = document.querySelectorAll('.course-progress-card');
      const topicItems = document.querySelectorAll('.topic-item');
      let hasResults = false;

      if (!searchTerm) {
        // Reset all visibility if search is empty
        courseCards.forEach(card => card.style.display = 'block');
        topicItems.forEach(topic => topic.style.display = 'block');

        // Hide any "no results" message
        const noResultsMessage = document.querySelector('.no-results-message');
        if (noResultsMessage) {
          noResultsMessage.classList.remove('show');
        }
        return;
      }

      // Check each course
      courseCards.forEach(card => {
        const courseTitle = card.getAttribute('data-course-title');
        const courseTopics = card.querySelectorAll('.topic-item');
        let courseHasMatch = false;

        // First check if course title matches
        if (courseTitle && courseTitle.includes(searchTerm)) {
          courseHasMatch = true;
          hasResults = true;

          // Show all topics in this course
          courseTopics.forEach(topic => {
            topic.style.display = 'block';
          });
        } else {
          // Check if any topics in this course match
          courseTopics.forEach(topic => {
            const topicTitle = topic.getAttribute('data-topic-title');

            if (topicTitle && topicTitle.includes(searchTerm)) {
              topic.style.display = 'block';
              courseHasMatch = true;
              hasResults = true;
            } else {
              topic.style.display = 'none';
            }
          });
        }

        // Show/hide course based on matches
        card.style.display = courseHasMatch ? 'block' : 'none';

        // Expand course if it has matching content
        if (courseHasMatch) {
          const courseIndex = Array.from(courseCards).indexOf(card);
          const content = document.getElementById(`content-${courseIndex}`);
          const toggle = document.getElementById(`toggle-${courseIndex}`);

          content.classList.remove('collapsed');
          toggle.classList.remove('collapsed');
        }
      });

      // Show/hide no results message
      let noResultsMessage = document.querySelector('.no-results-message');

      if (!noResultsMessage) {
        // Create message if it doesn't exist
        noResultsMessage = document.createElement('div');
        noResultsMessage.className = 'no-results-message';
        noResultsMessage.innerHTML = '<i class="fas fa-search"></i><h3>No Results Found</h3><p>Try different search terms.</p>';
        document.querySelector('.detailed-courses-section').appendChild(noResultsMessage);
      }

      if (hasResults) {
        noResultsMessage.classList.remove('show');
      } else {
        noResultsMessage.classList.add('show');
      }
    }

    // Initialize performance chart
    document.addEventListener('DOMContentLoaded', function() {
      const chartElement = document.getElementById('performanceChart');
      if (!chartElement) return;
      
      const ctx = chartElement.getContext('2d');

      new Chart(ctx, {
        type: 'doughnut',
        data: {
          labels: ['Completed', 'In Progress', 'Not Started'],
          datasets: [{
            data: [
              <%= analytics.totalContentCompleted %>,
              <%= analytics.totalContentItems - analytics.totalContentCompleted %>,
              0
            ],
            backgroundColor: [
              '#10b981',
              '#3b82f6',
              '#e5e7eb'
            ],
            borderWidth: 0
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'bottom',
              labels: {
                padding: 20,
                usePointStyle: true
              }
            }
          }
        }
      });
    });
  </script>

