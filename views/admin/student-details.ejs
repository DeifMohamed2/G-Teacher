    .dark-theme .content-details-table td {
      border-bottom-color: var(--admin-border-dark);
    }

    .content-details-table th {
      font-weight: 600;
      color: var(--admin-text-light);
      background: var(--admin-bg-light);
    }

    .dark-theme .content-details-table th {
      color: var(--admin-text-dark);
      background: var(--admin-bg-dark);
    }

    .content-type-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.375rem;
      padding: 0.25rem 0.5rem;
      border-radius: 0.25rem;
      font-size: 0.75rem;
      font-weight: 500;
    }

    .content-type-badge.video {
      background: #dbeafe;
      color: #1d4ed8;
    }

    .content-type-badge.quiz,
    .content-type-badge.homework {
      background: #fef3c7;
      color: #b45309;
    }

    .content-type-badge.pdf,
    .content-type-badge.reading {
      background: #ffedd5;
      color: #c2410c;
    }

    .content-type-badge.assignment {
      background: #dcfce7;
      color: #166534;
    }

