      border: 2px solid var(--admin-border-light);
      border-radius: 20px;
      box-shadow: var(--admin-shadow-lg);
      position: relative;
      overflow: hidden;
    }

    .dark-theme .action-buttons-section {
      background: var(--admin-card-dark);
      border-color: var(--admin-border-dark);
    }

    .action-buttons-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, #b80101, #8b0000);
      opacity: 0.8;
    }

    .action-buttons-container {
      display: flex;
      gap: 1.5rem;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
