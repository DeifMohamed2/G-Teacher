    }

    .attempts-details h5 {
      color: var(--admin-text-light);
      font-size: 1rem;
      font-weight: 600;
      margin-bottom: 1rem;
    }

    .dark-theme .attempts-details h5 {
      color: var(--admin-text-dark);
    }

    .attempts-list {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .attempt-item {
      padding: 1rem;
      background: var(--admin-bg-light);
      border-radius: 8px;
      border: 1px solid var(--admin-border-light);
    }

    .dark-theme .attempt-item {
      background: var(--admin-bg-dark);
      border-color: var(--admin-border-dark);
    }

    .attempt-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 0.5rem;
    }

    .attempt-number {
      font-weight: 600;
      color: var(--admin-text-light);
    }

    .dark-theme .attempt-number {
      color: var(--admin-text-dark);
    }

    .attempt-date {
      color: var(--admin-text-light);
      font-size: 0.85rem;
      opacity: 0.7;
    }

    .dark-theme .attempt-date {
      color: var(--admin-text-dark);
    }

    .attempt-details {
