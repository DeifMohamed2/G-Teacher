<body>
<!-- Admin Layout -->
<div class="admin-layout">

  <!-- Sidebar -->
  <%- include('./partials/admin-sidebar', { currentPage: 'students' }) %>

  <!-- Main Content -->
  <main class="admin-main">

    <!-- Top Bar -->
    <%- include('./partials/admin-topbar', { 
        breadcrumb: 'Student Details',
        breadcrumbSubtitle: student.firstName + ' ' + student.lastName,
        showSearch: false
    }) %>

    <!-- Content Area -->
    <div class="admin-content">
      <div class="admin-dashboard admin-fade-in">
        <div class="student-details-container">
      <!-- Page Header -->
      <div class="page-header">
        <div>
          <div class="breadcrumb">
            <a href="/admin/students">Students</a>
            <i class="fas fa-chevron-right"></i>
            <span><%= student.firstName %> <%= student.lastName %></span>
          </div>
          <h1 class="page-title">Student Details</h1>
        </div>
        <div class="page-actions">
    
          <button class="btn btn-primary" onclick="exportStudentData()">
            <i class="fas fa-file-excel"></i>
            Export Excel Report
          </button>
        </div>
      </div>

      <!-- Enhanced Student Profile Header -->
      <div class="student-profile-header">
        <div class="student-profile-content">
          <div class="student-avatar-section">
            <div class="student-avatar-large">
              <% if (student.profilePicture && student.profilePicture.trim() !== '') { %>
                <img src="<%= student.profilePicture %>" alt="Profile Picture" style="width: 100%; height: 100%; border-radius: 16px; object-fit: cover;">
              <% } else { %>
                <%= student.firstName.charAt(0).toUpperCase() %><%= student.lastName.charAt(0).toUpperCase() %>
              <% } %>
         
            </div>
            <div class="student-status-info">
              <span><%= student.isActive ? 'Active Student' : 'Inactive Student' %></span>
              <br>
              <small style="display:inline-flex;align-items:center;gap:6px;margin-top:6px;">
                <i class="fas fa-phone"></i>
                Parent Phone: 
                <span style="font-weight:600;color:<%= student.isParentPhoneChecked ? '#10b981' : '#ef4444' %>;">
                  <%= student.isParentPhoneChecked ? 'Verified' : 'Not Verified' %>
                </span>
              </small>
            </div>
          </div>
          
          <div class="student-info-section">
            <div class="student-primary-info">
              <h1 class="student-name"><%= student.firstName %> <%= student.lastName %></h1>
              <div class="student-code-badge"><%= student.studentCode %></div>
            </div>
            
            <div class="student-details-grid">
              <div class="detail-item">
                <div class="detail-icon">
                  <i class="fas fa-envelope"></i>
                </div>
                <div class="detail-content">
                  <div class="detail-label">Email</div>
                  <div class="detail-value"><%= student.studentEmail %></div>
                </div>
              </div>
              
              <div class="detail-item">
                <div class="detail-icon">
                  <i class="fas fa-phone"></i>
                </div>
                <div class="detail-content">
                  <div class="detail-label">Phone</div>
                  <div class="detail-value"><%= student.studentCountryCode %> <%= student.studentNumber %></div>
                </div>
              </div>
              
              <div class="detail-item">
                <div class="detail-icon">
                  <i class="fas fa-graduation-cap"></i>
                </div>
                <div class="detail-content">
                  <div class="detail-label">Grade</div>
                  <div class="detail-value"><%= student.grade %></div>
                </div>
              </div>
              
              <div class="detail-item">
                <div class="detail-icon">
                  <i class="fas fa-user-friends"></i>
                </div>
                <div class="detail-content">
                  <div class="detail-label">Parent Phone</div>
                  <div class="detail-value">
                    <%= student.parentCountryCode %> <%= student.parentNumber %>
                    <span style="display:inline-flex;align-items:center;gap:6px;margin-left:8px;font-size:0.8rem;">
                      <span class="content-status <%= student.isParentPhoneChecked ? 'completed' : 'pending' %>">
                        <%= student.isParentPhoneChecked ? 'Verified' : 'Not Verified' %>
                      </span>
                    </span>
                  </div>
                </div>
              </div>
              
              <div class="detail-item">
                <div class="detail-icon">
                  <i class="fas fa-user-tie"></i>
                </div>
                <div class="detail-content">
                  <div class="detail-label">English Teacher</div>
                  <div class="detail-value"><%= student.englishTeacher %></div>
                </div>
              </div>
              
              <div class="detail-item">
                <div class="detail-icon">
                  <i class="fas fa-calendar-plus"></i>
                </div>
                <div class="detail-content">
                  <div class="detail-label">Joined</div>
                  <div class="detail-value"><%= new Date(student.createdAt).toLocaleDateString() %></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Analytics Overview -->
      <div class="analytics-grid">
        <div class="analytics-card">
          <div class="analytics-icon icon-courses">
