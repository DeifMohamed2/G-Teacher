      border-radius: 0.25rem;
      font-size: 0.75rem;
      font-weight: 500;
    }

    .content-status.completed {
      background: #dcfce7;
      color: #166534;
    }

    .content-status.pending {
      background: #fef9c3;
      color: #854d0e;
    }

    .empty-content-message {
      text-align: center;
      padding: 1.5rem;
      color: var(--admin-text-light);
      font-style: italic;
      opacity: 0.7;
    }

    .dark-theme .empty-content-message {
      color: var(--admin-text-dark);
    }

    /* No results message for search */
    .no-results-message {
      display: none;
      text-align: center;
      padding: 2rem;
      color: var(--admin-text-light);
      background: var(--admin-bg-light);
      border-radius: 0.5rem;
      margin-top: 1rem;
      opacity: 0.7;
