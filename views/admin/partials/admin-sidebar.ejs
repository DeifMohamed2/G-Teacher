<style>
  /* Coming Soon Badge */
  .admin-nav-badge.coming-soon {
    background: linear-gradient(135deg, #f59e0b, #d97706);
    color: white;
    font-size: 9px;
    font-weight: 700;
    padding: 2px 6px;
    border-radius: 4px;
    margin-left: auto;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    animation: badge-pulse 2s ease-in-out infinite;
  }

  @keyframes badge-pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
  }

  /* Disabled Nav Item */
  .admin-nav-item.admin-nav-item-disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .admin-nav-item.admin-nav-item-disabled:hover {
    background: transparent;
    transform: none;
  }
</style>

<script>
  function showComingSoonAlert(featureName) {
    // Check if SweetAlert2 is available
    if (typeof Swal !== 'undefined') {
      Swal.fire({
        icon: 'info',
        title: 'Coming Soon! ðŸš§',
        html: `<p><strong>${featureName}</strong> feature is currently under development.</p><p>Stay tuned for updates!</p>`,
        confirmButtonText: 'Got it!',
        confirmButtonColor: '#3a92bd'
      });
    } else {
      alert(`${featureName} feature is coming soon! This page is currently under development.`);
    }
  }
</script>
