<%- include('./partials/admin-header', { title, user, theme, currentPage: 'invoices', pageCSS: 'orders' }) %>

<!-- Admin Layout -->
<div class="admin-layout">

  <!-- Sidebar -->
  <%- include('./partials/admin-sidebar', { currentPage: 'invoices' }) %>

  <!-- Main Content -->
  <main class="admin-main">

    <!-- Top Bar -->
    <%- include('./partials/admin-topbar', { 
        breadcrumb: 'Invoice Management',
        breadcrumbSubtitle: 'Manage and track teacher invoices',
        showSearch: false
    }) %>

    <!-- Content Area -->
    <div class="admin-content">
      <div class="admin-orders-container">
        <!-- Header -->
        <div class="admin-orders-header d-flex align-items-center justify-content-between mb-4">
          <div>
            <h1 class="mb-0">Invoice Management</h1>
            <p class="text-muted">Track invoices, payments, and teacher payouts</p>
          </div>
          <div class="admin-header-actions">
            <a href="/admin/gteacher-analysis" class="btn btn-primary" style="padding: 12px 24px; border-radius: 12px; font-weight: 600; font-size: 14px; display: inline-flex; align-items: center; gap: 8px;">
              <i class="fas fa-plus"></i>
              Create New Invoice
            </a>
          </div>
        </div>

        <!-- Status Filter Tabs -->
        <div class="card shadow-sm mb-4" style="border-radius: 16px; overflow: hidden;">
          <div class="card-body" style="padding: 16px 24px;">
            <div class="d-flex align-items-center gap-3 flex-wrap">
              <button class="status-filter-btn active" data-status="all">
                <i class="fas fa-list"></i> All <span class="badge-count" id="countAll">0</span>
              </button>
              <button class="status-filter-btn" data-status="generated">
                <i class="fas fa-file-invoice"></i> Generated <span class="badge-count" id="countGenerated">0</span>
              </button>
              <button class="status-filter-btn" data-status="sent">
                <i class="fas fa-paper-plane"></i> Sent <span class="badge-count" id="countSent">0</span>
              </button>
            </div>
          </div>
        </div>

        <!-- Filters -->
        <div class="card shadow-sm mb-4" style="border-radius: 16px; overflow: hidden;">
          <div class="card-body" style="padding: 20px 24px;">
            <div class="row g-3 align-items-end">
              <div class="col-12 col-md-3">
                <label class="form-label" style="font-size: 12px; font-weight: 600; color: #64748b; text-transform: uppercase; letter-spacing: 0.5px;">Teacher</label>
                <select id="filterTeacher" class="form-select" style="border-radius: 10px; border: 2px solid #e5e7eb; padding: 10px 14px;">
                  <option value="">All Teachers</option>
                  <% teachers.forEach(teacher => { %>
                    <option value="<%= teacher._id %>"><%= teacher.firstName %> <%= teacher.lastName %> (<%= teacher.teacherCode %>)</option>
                  <% }); %>
                </select>
              </div>
              <div class="col-12 col-md-3">
                <label class="form-label" style="font-size: 12px; font-weight: 600; color: #64748b; text-transform: uppercase; letter-spacing: 0.5px;">Search</label>
                <input type="text" id="filterSearch" class="form-control" placeholder="Invoice # or Teacher..." style="border-radius: 10px; border: 2px solid #e5e7eb; padding: 10px 14px;">
              </div>
              <div class="col-6 col-md-2">
                <label class="form-label" style="font-size: 12px; font-weight: 600; color: #64748b; text-transform: uppercase; letter-spacing: 0.5px;">From Date</label>
                <input type="date" id="filterStartDate" class="form-control" style="border-radius: 10px; border: 2px solid #e5e7eb; padding: 10px 14px;">
              </div>
              <div class="col-6 col-md-2">
                <label class="form-label" style="font-size: 12px; font-weight: 600; color: #64748b; text-transform: uppercase; letter-spacing: 0.5px;">To Date</label>
                <input type="date" id="filterEndDate" class="form-control" style="border-radius: 10px; border: 2px solid #e5e7eb; padding: 10px 14px;">
              </div>
              <div class="col-12 col-md-2">
                <button class="btn btn-outline-secondary w-100" onclick="clearFilters()" style="border-radius: 10px; padding: 10px 14px; font-weight: 600;">
                  <i class="fas fa-times"></i> Clear
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Invoices Table Card -->
        <div class="card shadow-sm" style="border-radius: 16px; overflow: hidden;">
          <div class="card-header" style="background: linear-gradient(135deg, #3a92bd, #0c5374); border-bottom: none; padding: 20px 24px;">
            <div class="d-flex justify-content-between align-items-center">
              <h5 class="mb-0" style="color: #ffffff; font-weight: 700; display: flex; align-items: center; gap: 12px;">
                <i class="fas fa-file-invoice-dollar"></i> Invoice List
              </h5>
              <div class="badge" id="totalBadge" style="background: rgba(255, 255, 255, 0.2); color: white; border: 1px solid rgba(255, 255, 255, 0.3); padding: 8px 16px; border-radius: 20px; font-size: 12px; font-weight: 600;">
                <span id="totalInvoicesCount">0</span> Total Invoices
              </div>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="invoicesTable">
              <thead>
                <tr style="background: #f8fafc;">
                  <th class="orders-th">Invoice #</th>
                  <th class="orders-th">Teacher</th>
                  <th class="orders-th">Date Range</th>
                  <th class="orders-th" style="text-align: center;">Courses</th>
                  <th class="orders-th">Payout</th>
                  <th class="orders-th">Status</th>
                  <th class="orders-th">Payment Method</th>
                  <th class="orders-th">Generated</th>
                  <th class="orders-th" style="text-align: center;">Actions</th>
                </tr>
              </thead>
              <tbody id="invoicesTableBody">
                <!-- Loaded via JS -->
              </tbody>
            </table>
          </div>
          
          <!-- Loading -->
          <div class="text-center py-5" id="loadingState">
            <i class="fas fa-spinner fa-spin fa-2x text-primary mb-3"></i>
            <p class="text-muted">Loading invoices...</p>
          </div>
          
          <!-- Empty State -->
          <div class="text-center py-5" id="emptyState" style="display: none;">
            <div style="width: 80px; height: 80px; border-radius: 50%; background: linear-gradient(135deg, #e0f2fe, #bae6fd); display: flex; align-items: center; justify-content: center; margin: 0 auto 20px;">
              <i class="fas fa-file-invoice" style="font-size: 32px; color: #0284c7;"></i>
            </div>
            <h4 style="font-weight: 700; color: #374151; margin-bottom: 8px;">No Invoices Found</h4>
            <p class="text-muted mb-4">Create your first invoice from the G-Teacher Analysis page</p>
            <a href="/admin/gteacher-analysis" class="btn btn-primary" style="border-radius: 10px; padding: 12px 24px; font-weight: 600;">
              <i class="fas fa-plus"></i> Create Invoice
            </a>
          </div>
        </div>

        <!-- Pagination -->
        <div class="card shadow-sm mt-4" style="border-radius: 16px; overflow: hidden;" id="paginationContainer">
          <div class="card-body" style="padding: 16px 24px;">
            <div class="d-flex justify-content-between align-items-center">
              <div class="text-muted" style="font-size: 14px;">
                Showing <span class="fw-semibold text-primary" id="showingFrom">0</span> - <span class="fw-semibold text-primary" id="showingTo">0</span> of <span class="fw-semibold text-primary" id="totalCount">0</span>
              </div>
              <div class="d-flex gap-1" id="paginationButtons">
                <!-- Generated via JS -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>

<!-- Invoice Details Modal -->
<div class="modal fade" id="invoiceModal" tabindex="-1">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content" style="border-radius: 16px; border: none;">
      <div class="modal-header" style="background: linear-gradient(135deg, #3a92bd, #0c5374); border-radius: 16px 16px 0 0; padding: 20px 24px;">
        <h5 class="modal-title" style="color: white; font-weight: 700;"><i class="fas fa-file-invoice"></i> Invoice Details</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="invoiceModalBody" style="padding: 24px;">
        <!-- Loaded via JS -->
      </div>
      <div class="modal-footer" id="invoiceModalFooter" style="padding: 16px 24px; border-top: 1px solid #e5e7eb;">
        <!-- Action buttons -->
      </div>
    </div>
  </div>
</div>

<!-- Update Status Modal -->
<div class="modal fade" id="statusModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content" style="border-radius: 16px; border: none;">
      <div class="modal-header" style="background: linear-gradient(135deg, #f59e0b, #d97706); border-radius: 16px 16px 0 0; padding: 20px 24px;">
        <h5 class="modal-title" style="color: white; font-weight: 700;"><i class="fas fa-edit"></i> Update Invoice Status</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" style="padding: 24px;">
        <input type="hidden" id="statusInvoiceId">
        
        <div class="mb-3">
          <label class="form-label" style="font-weight: 600; color: #374151;">Status</label>
          <select id="updateStatus" class="form-select" style="border-radius: 10px; border: 2px solid #e5e7eb; padding: 12px 14px;">
            <option value="generated">Generated</option>
            <option value="sent">Sent</option>
          </select>
        </div>
        
        <div class="mb-3">
          <label class="form-label" style="font-weight: 600; color: #374151;">Payment Method</label>
          <select id="updatePaymentMethod" class="form-select" style="border-radius: 10px; border: 2px solid #e5e7eb; padding: 12px 14px;">
            <option value="pending">Pending</option>
            <option value="bank_transfer">Bank Transfer</option>
            <option value="cash">Cash</option>
            <option value="cheque">Cheque</option>
            <option value="other">Other</option>
          </select>
        </div>
        
        <div class="mb-3">
          <label class="form-label" style="font-weight: 600; color: #374151;">Transaction ID / Reference</label>
          <input type="text" id="updateTransactionId" class="form-control" placeholder="Enter transaction ID..." style="border-radius: 10px; border: 2px solid #e5e7eb; padding: 12px 14px;">
        </div>
        
        <div class="mb-0">
          <label class="form-label" style="font-weight: 600; color: #374151;">Notes</label>
          <textarea id="updateNotes" class="form-control" rows="3" placeholder="Add notes..." style="border-radius: 10px; border: 2px solid #e5e7eb; padding: 12px 14px;"></textarea>
        </div>
      </div>
      <div class="modal-footer" style="padding: 16px 24px; border-top: 1px solid #e5e7eb;">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" style="border-radius: 10px; padding: 10px 20px; font-weight: 600;">Cancel</button>
        <button type="button" class="btn btn-primary" onclick="saveStatusUpdate()" style="border-radius: 10px; padding: 10px 20px; font-weight: 600;">
          <i class="fas fa-save"></i> Save Changes
        </button>
      </div>
    </div>
  </div>
</div>

