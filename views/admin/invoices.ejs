  }

  /* Modal - Dark */
  .dark-theme .modal-content {
    background: #1e293b;
    border-color: #334155;
  }

  .dark-theme .modal-body {
    background: #1e293b;
    color: #e2e8f0;
  }

  .dark-theme .modal-footer {
    background: #1e293b;
    border-color: #334155 !important;
  }

  .dark-theme .detail-row {
    border-color: #334155;
  }

  .dark-theme .detail-label {
    color: #94a3b8;
  }

  .dark-theme .detail-value {
    color: #e2e8f0;
  }

  /* Courses Section in Modal - Dark */
  .dark-theme .courses-section {
    border-color: #334155;
  }

  .dark-theme .courses-section h6 {
    color: #e2e8f0;
  }

  .dark-theme .course-item {
    background: #334155;
  }

  .dark-theme .course-title {
    color: #e2e8f0;
  }

  .dark-theme .course-amount {
    color: #4ade80;
  }

  /* Clear Button - Dark */
  .dark-theme .btn-outline-secondary {
    color: #94a3b8;
    border-color: #475569;
  }

  .dark-theme .btn-outline-secondary:hover {
    background: #334155;
    color: #e2e8f0;
    border-color: #475569;
  }

  /* Text utilities - Dark */
  .dark-theme .text-muted {
    color: #64748b !important;
  }

  /* Invoice List Header */
  .dark-theme .card-header {
    background: linear-gradient(135deg, #1e3a5f, #0c5374) !important;
  }

  /* Table Container Background */
  .dark-theme .table-responsive {
    background: #1e293b;
  }

  .dark-theme .table {
    background: #1e293b;
  }

  /* Loading and Empty States - Dark */
  .dark-theme #loadingState,
  .dark-theme #emptyState {
    color: #94a3b8;
  }

  .dark-theme #emptyState h4 {
    color: #e2e8f0;
  }
