<script>
  let currentPage = 1;
  let currentStatus = 'all';
  let debounceTimer = null;
  let invoiceModal, statusModal;

  // Initialize
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize Bootstrap modals
    invoiceModal = new bootstrap.Modal(document.getElementById('invoiceModal'));
    statusModal = new bootstrap.Modal(document.getElementById('statusModal'));
    
    loadInvoices();
    setupFilters();
    setupTabs();
  });

  // Setup filter listeners
  function setupFilters() {
    document.getElementById('filterTeacher').addEventListener('change', () => {
      currentPage = 1;
      loadInvoices();
    });

    document.getElementById('filterSearch').addEventListener('input', (e) => {
      clearTimeout(debounceTimer);
      debounceTimer = setTimeout(() => {
        currentPage = 1;
        loadInvoices();
      }, 300);
    });

    document.getElementById('filterStartDate').addEventListener('change', () => {
      currentPage = 1;
      loadInvoices();
    });

    document.getElementById('filterEndDate').addEventListener('change', () => {
      currentPage = 1;
      loadInvoices();
    });
  }

  // Setup status tabs
  function setupTabs() {
    document.querySelectorAll('.status-filter-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        document.querySelectorAll('.status-filter-btn').forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        currentStatus = this.dataset.status;
        currentPage = 1;
        loadInvoices();
      });
    });
  }

  // Load invoices
  async function loadInvoices() {
    const tbody = document.getElementById('invoicesTableBody');
    const loadingState = document.getElementById('loadingState');
    const emptyState = document.getElementById('emptyState');
    const table = document.getElementById('invoicesTable');

    // Show loading
    tbody.innerHTML = '';
    loadingState.style.display = 'block';
    emptyState.style.display = 'none';
    table.style.display = 'none';

    try {
      const params = new URLSearchParams({
        page: currentPage,
        limit: 20
      });

      if (currentStatus !== 'all') {
        params.append('status', currentStatus);
      }

      const teacherId = document.getElementById('filterTeacher').value;
      if (teacherId) params.append('teacherId', teacherId);

      const search = document.getElementById('filterSearch').value;
      if (search) params.append('search', search);

      const startDate = document.getElementById('filterStartDate').value;
      if (startDate) params.append('startDate', startDate);

      const endDate = document.getElementById('filterEndDate').value;
      if (endDate) params.append('endDate', endDate);

      const response = await fetch(`/admin/api/invoices?${params}`);
      const result = await response.json();

      loadingState.style.display = 'none';

      if (!result.success) {
        throw new Error(result.message);
      }

      const { invoices, pagination, statusCounts } = result.data;

      // Update status counts
      const totalAll = Object.values(statusCounts).reduce((a, b) => a + b, 0);
      document.getElementById('countAll').textContent = totalAll;
      document.getElementById('countGenerated').textContent = statusCounts.generated || 0;
      document.getElementById('countSent').textContent = statusCounts.sent || 0;
      document.getElementById('totalInvoicesCount').textContent = totalAll;

      if (invoices.length === 0) {
        emptyState.style.display = 'block';
        document.getElementById('paginationContainer').style.display = 'none';
        return;
      }

      table.style.display = 'table';
      document.getElementById('paginationContainer').style.display = 'block';

      // Render invoices
      tbody.innerHTML = invoices.map(invoice => `
        <tr>
          <td>
            <a href="#" class="invoice-link" onclick="viewInvoice('${invoice._id}'); return false;">${invoice.invoiceNumber}</a>
          </td>
          <td>
            <div class="teacher-cell-name">${invoice.teacherName}</div>
            <div class="teacher-cell-code">${invoice.teacherCode || 'N/A'}</div>
          </td>
          <td>
            <div class="date-range-cell">${invoice.dateRange?.displayStart || 'N/A'} <i class="fas fa-arrow-right"></i> ${invoice.dateRange?.displayEnd || 'N/A'}</div>
          </td>
          <td style="text-align: center;">
            <span class="badge bg-secondary">${invoice.courses?.length || 0}</span>
          </td>
          <td>
            <span class="payout-amount">AED ${(invoice.totalPayout || 0).toLocaleString()}</span>
          </td>
          <td>
            <span class="invoice-status ${invoice.status}">
              ${getStatusIcon(invoice.status)} ${capitalizeFirst(invoice.status)}
            </span>
          </td>
          <td>
            <span class="payment-badge ${invoice.paymentMethod || 'pending'}">
              ${getPaymentIcon(invoice.paymentMethod)} ${formatPaymentMethod(invoice.paymentMethod)}
            </span>
          </td>
          <td>
            <div class="date-cell">${formatDate(invoice.generatedAt)}</div>
          </td>
          <td>
            <div class="invoice-actions">
              <button class="invoice-action-btn invoice-action-view" onclick="viewInvoice('${invoice._id}')" title="View"><i class="fas fa-eye"></i></button>
              ${invoice.pdfUrl ? `<a href="${invoice.pdfUrl}" target="_blank" class="invoice-action-btn invoice-action-download" title="Download"><i class="fas fa-download"></i></a>` : ''}
              <button class="invoice-action-btn invoice-action-edit" onclick="openStatusModal('${invoice._id}', '${invoice.status}', '${invoice.paymentMethod}', '${(invoice.notes || '').replace(/'/g, "\\'")}')" title="Edit"><i class="fas fa-edit"></i></button>
              <button class="invoice-action-btn invoice-action-delete" onclick="deleteInvoice('${invoice._id}')" title="Delete"><i class="fas fa-trash"></i></button>
            </div>
          </td>
        </tr>
      `).join('');

      // Update pagination
      document.getElementById('showingFrom').textContent = (pagination.page - 1) * pagination.limit + 1;
      document.getElementById('showingTo').textContent = Math.min(pagination.page * pagination.limit, pagination.total);
      document.getElementById('totalCount').textContent = pagination.total;

      renderPagination(pagination);

    } catch (error) {
      console.error('Error loading invoices:', error);
      loadingState.style.display = 'none';
      table.style.display = 'table';
      tbody.innerHTML = `<tr><td colspan="9" class="text-center text-danger py-4">Error loading invoices: ${error.message}</td></tr>`;
    }
  }

  // Render pagination
  function renderPagination(pagination) {
    const container = document.getElementById('paginationButtons');
    let html = '';

    // Previous button
    html += `<button class="page-btn" ${pagination.page <= 1 ? 'disabled' : ''} onclick="goToPage(${pagination.page - 1})">
      <i class="fas fa-chevron-left"></i>
    </button>`;

    // Page numbers
    for (let i = 1; i <= pagination.pages; i++) {
      if (i === 1 || i === pagination.pages || (i >= pagination.page - 1 && i <= pagination.page + 1)) {
        html += `<button class="page-btn ${i === pagination.page ? 'active' : ''}" onclick="goToPage(${i})">${i}</button>`;
      } else if (i === pagination.page - 2 || i === pagination.page + 2) {
        html += `<button class="page-btn" disabled>...</button>`;
      }
    }

    // Next button
    html += `<button class="page-btn" ${pagination.page >= pagination.pages ? 'disabled' : ''} onclick="goToPage(${pagination.page + 1})">
      <i class="fas fa-chevron-right"></i>
    </button>`;

    container.innerHTML = html;
  }

  function goToPage(page) {
    currentPage = page;
    loadInvoices();
  }

  // View invoice details
  async function viewInvoice(invoiceId) {
    const body = document.getElementById('invoiceModalBody');
    const footer = document.getElementById('invoiceModalFooter');

    body.innerHTML = '<div class="text-center py-5"><i class="fas fa-spinner fa-spin fa-2x text-primary"></i></div>';
    footer.innerHTML = '';
    invoiceModal.show();

    try {
      const response = await fetch(`/admin/api/invoices/${invoiceId}`);
      const result = await response.json();

      if (!result.success) {
        throw new Error(result.message);
      }

      const invoice = result.data;

      body.innerHTML = `
        <div class="detail-row">
          <span class="detail-label">Invoice Number</span>
          <span class="detail-value">${invoice.invoiceNumber}</span>
        </div>
        <div class="detail-row">
          <span class="detail-label">Teacher</span>
          <span class="detail-value">${invoice.teacherName} (${invoice.teacherCode || 'N/A'})</span>
        </div>
        <div class="detail-row">
          <span class="detail-label">Period</span>
          <span class="detail-value">${invoice.dateRange?.displayStart} - ${invoice.dateRange?.displayEnd}</span>
        </div>
        <div class="detail-row">
          <span class="detail-label">Status</span>
          <span class="detail-value"><span class="invoice-status ${invoice.status}">${capitalizeFirst(invoice.status)}</span></span>
        </div>
        <div class="detail-row">
          <span class="detail-label">Payment Method</span>
          <span class="detail-value">${formatPaymentMethod(invoice.paymentMethod)}</span>
        </div>
        <div class="detail-row">
          <span class="detail-label">Total Orders</span>
          <span class="detail-value">${invoice.totalOrders}</span>
        </div>
        <div class="detail-row">
          <span class="detail-label">Total Refunds</span>
          <span class="detail-value">${invoice.totalRefunds}</span>
        </div>
        <div class="detail-row">
          <span class="detail-label">Total Payout</span>
          <span class="detail-value" style="font-weight:700;color:#10b981;font-size:18px;">AED ${(invoice.totalPayout || 0).toLocaleString()}</span>
        </div>
        ${invoice.paidAt ? `
          <div class="detail-row">
            <span class="detail-label">Paid At</span>
            <span class="detail-value">${formatDate(invoice.paidAt)}</span>
          </div>
        ` : ''}
        ${invoice.notes ? `
          <div class="detail-row">
            <span class="detail-label">Notes</span>
            <span class="detail-value">${invoice.notes}</span>
          </div>
        ` : ''}
        
        <div class="courses-section">
          <h6><i class="fas fa-book"></i> Courses (${invoice.courses?.length || 0})</h6>
          ${invoice.courses?.map(c => `
            <div class="course-item">
              <span class="course-title">${c.title}</span>
              <span class="course-amount">AED ${(c.netTotal || 0).toLocaleString()}</span>
            </div>
          `).join('') || '<p class="text-muted mb-0">No courses</p>'}
        </div>
      `;

      footer.innerHTML = `
        ${invoice.pdfUrl ? `
          <a href="${invoice.pdfUrl}" target="_blank" class="btn btn-success" style="border-radius: 10px; padding: 10px 20px; font-weight: 600;">
            <i class="fas fa-download"></i> Download PDF
          </a>
        ` : ''}
        <button class="btn btn-warning" onclick="invoiceModal.hide(); openStatusModal('${invoice._id}', '${invoice.status}', '${invoice.paymentMethod}', '${(invoice.notes || '').replace(/'/g, "\\'")}');" style="border-radius: 10px; padding: 10px 20px; font-weight: 600;">
          <i class="fas fa-edit"></i> Update Status
        </button>
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" style="border-radius: 10px; padding: 10px 20px; font-weight: 600;">Close</button>
      `;

    } catch (error) {
      body.innerHTML = `<div class="text-center text-danger py-4">Error loading invoice: ${error.message}</div>`;
      footer.innerHTML = '<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" style="border-radius: 10px;">Close</button>';
    }
  }

  // Status Modal
  function openStatusModal(invoiceId, status, paymentMethod, notes) {
    document.getElementById('statusInvoiceId').value = invoiceId;
    document.getElementById('updateStatus').value = status;
    document.getElementById('updatePaymentMethod').value = paymentMethod || 'pending';
    document.getElementById('updateTransactionId').value = '';
    document.getElementById('updateNotes').value = notes || '';
    statusModal.show();
  }

  async function saveStatusUpdate() {
    const invoiceId = document.getElementById('statusInvoiceId').value;
    const status = document.getElementById('updateStatus').value;
    const paymentMethod = document.getElementById('updatePaymentMethod').value;
    const transactionId = document.getElementById('updateTransactionId').value;
    const notes = document.getElementById('updateNotes').value;

    try {
      const response = await fetch(`/admin/api/invoices/${invoiceId}/status`, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          status,
          paymentMethod,
          paymentDetails: { transactionId },
          notes
        })
      });

      const result = await response.json();

      if (!result.success) {
        throw new Error(result.message);
      }

      statusModal.hide();
      loadInvoices();
      alert('Invoice updated successfully!');

    } catch (error) {
      alert('Error updating invoice: ' + error.message);
    }
  }

  // Delete invoice
  async function deleteInvoice(invoiceId) {
    if (!confirm('Are you sure you want to delete this invoice? This action cannot be undone.')) {
      return;
    }

    try {
      const response = await fetch(`/admin/api/invoices/${invoiceId}`, {
        method: 'DELETE'
      });

      const result = await response.json();

      if (!result.success) {
        throw new Error(result.message);
      }

      loadInvoices();
      alert('Invoice deleted successfully!');

    } catch (error) {
      alert('Error deleting invoice: ' + error.message);
    }
  }

  // Clear filters
  function clearFilters() {
    document.getElementById('filterTeacher').value = '';
    document.getElementById('filterSearch').value = '';
    document.getElementById('filterStartDate').value = '';
    document.getElementById('filterEndDate').value = '';
    currentPage = 1;
    loadInvoices();
  }

  // Helper functions
  function getStatusIcon(status) {
    switch (status) {
      case 'generated': return '<i class="fas fa-file-invoice"></i>';
      case 'sent': return '<i class="fas fa-paper-plane"></i>';
      default: return '';
    }
  }

  function getPaymentIcon(method) {
    switch (method) {
      case 'bank_transfer': return '<i class="fas fa-university"></i>';
      case 'cash': return '<i class="fas fa-money-bill-wave"></i>';
      case 'cheque': return '<i class="fas fa-money-check"></i>';
      case 'other': return '<i class="fas fa-wallet"></i>';
      case 'pending': return '<i class="fas fa-clock"></i>';
      default: return '<i class="fas fa-clock"></i>';
    }
  }

  function capitalizeFirst(str) {
    return str ? str.charAt(0).toUpperCase() + str.slice(1) : '';
  }

  function formatPaymentMethod(method) {
    switch (method) {
      case 'bank_transfer': return 'Bank Transfer';
      case 'cash': return 'Cash';
      case 'cheque': return 'Cheque';
      case 'other': return 'Other';
      case 'pending': return 'Pending';
      default: return method || 'Pending';
    }
  }

  function formatDate(dateStr) {
    if (!dateStr) return 'N/A';
    const date = new Date(dateStr);
    return date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
  }
</script>

