  // Export analysis data
  async function exportAnalysisData(type) {
    const dropdown = document.querySelector('.export-dropdown');
    dropdown.classList.remove('active');
    
    // Show loading toast
    const toast = showExportToast('Generating report...', 'loading');
    
    try {
      const response = await fetch(`/admin/api/gteacher-analysis/export?type=${type}`);
      
      if (!response.ok) {
        throw new Error('Export failed');
      }
      
      const blob = await response.blob();
      const url = window.URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      
      const date = new Date().toISOString().split('T')[0];
      const typeLabels = {
        'summary': 'Summary',
        'detailed': 'Detailed',
        'full': 'Complete'
      };
      a.download = `G-Teacher-Analysis-${typeLabels[type]}-${date}.xlsx`;
      
      document.body.appendChild(a);
      a.click();
      window.URL.revokeObjectURL(url);
      a.remove();
      
      updateExportToast(toast, 'Report downloaded successfully!', 'success');
    } catch (error) {
      console.error('Export error:', error);
      updateExportToast(toast, 'Export failed. Please try again.', 'error');
    }
  }

  // Toast notifications for export
  function showExportToast(message, type) {
    const toast = document.createElement('div');
    toast.className = `export-toast ${type}`;
    toast.innerHTML = `
      <div class="toast-icon">
        ${type === 'loading' ? '<i class="fas fa-spinner fa-spin"></i>' : ''}
        ${type === 'success' ? '<i class="fas fa-check-circle"></i>' : ''}
        ${type === 'error' ? '<i class="fas fa-times-circle"></i>' : ''}
      </div>
      <span>${message}</span>
    `;
    document.body.appendChild(toast);
    
    // Animate in
    setTimeout(() => toast.classList.add('show'), 10);
    
    return toast;
  }

  function updateExportToast(toast, message, type) {
    toast.className = `export-toast ${type} show`;
    toast.innerHTML = `
      <div class="toast-icon">
        ${type === 'success' ? '<i class="fas fa-check-circle"></i>' : ''}
        ${type === 'error' ? '<i class="fas fa-times-circle"></i>' : ''}
      </div>
      <span>${message}</span>
