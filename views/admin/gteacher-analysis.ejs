      page.style.marginBottom = '0';
    });
    
    const opt = {
      margin: [10, 10, 10, 10],
      filename: `Invoice-${currentTeacherName.replace(/\s+/g, '-')}-${new Date().toISOString().split('T')[0]}.pdf`,
      image: { type: 'jpeg', quality: 0.98 },
      html2canvas: { 
