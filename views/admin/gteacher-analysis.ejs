  // Page Navigation Functions
  let currentInvoicePage = 1;
  let totalInvoicePages = 1;
  
  function initInvoicePageNavigation() {
    const pages = document.querySelectorAll('.invoice-page');
    totalInvoicePages = pages.length;
    currentInvoicePage = 1;
    
    document.getElementById('totalPagesNum').textContent = totalInvoicePages;
    updatePageDisplay();
  }
  
  function navigateInvoicePage(direction) {
    if (direction === 'next' && currentInvoicePage < totalInvoicePages) {
      currentInvoicePage++;
    } else if (direction === 'prev' && currentInvoicePage > 1) {
      currentInvoicePage--;
    }
    updatePageDisplay();
  }
  
  function updatePageDisplay() {
    const pages = document.querySelectorAll('.invoice-page');
    pages.forEach((page, idx) => {
      page.style.display = (idx + 1 === currentInvoicePage) ? 'block' : 'none';
    });
    
    document.getElementById('currentPageNum').textContent = currentInvoicePage;
    document.getElementById('prevPageBtn').disabled = currentInvoicePage <= 1;
    document.getElementById('nextPageBtn').disabled = currentInvoicePage >= totalInvoicePages;
  }

  // Save Invoice to Database
  async function saveInvoiceToDatabase() {
    const saveBtn = document.getElementById('saveInvoiceBtn');
    const originalText = saveBtn.innerHTML;
    
    try {
      saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving...';
      saveBtn.disabled = true;
      
      // Generate PDF as base64
      const preview = document.getElementById('invoicePreview');
      const pages = preview.querySelectorAll('.invoice-page');
      const pageNav = preview.querySelector('.invoice-page-nav');
      
      // Hide page navigation for PDF
      if (pageNav) pageNav.style.display = 'none';
      
      // Show all pages for PDF export
      pages.forEach(page => {
        page.style.display = 'block';
        page.style.marginBottom = '0';
      });
      
      const opt = {
        margin: [10, 10, 10, 10],
        image: { type: 'jpeg', quality: 0.98 },
        html2canvas: { 
          scale: 2, 
          useCORS: true,
          allowTaint: true,
          logging: false
        },
        jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' },
        pagebreak: { mode: ['css', 'legacy'], before: '.course-page' }
      };
      
      // Generate PDF and convert to base64
      const pdfBlob = await html2pdf().set(opt).from(preview).outputPdf('blob');
      const pdfBase64 = await new Promise((resolve) => {
        const reader = new FileReader();
        reader.onloadend = () => resolve(reader.result.split(',')[1]);
        reader.readAsDataURL(pdfBlob);
      });
      
      // Restore page navigation
      if (pageNav) pageNav.style.display = 'flex';
      updatePageDisplay();
      
      // Save to database
      const response = await fetch('/admin/api/invoices', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          teacherId: currentTeacherId,
          invoiceData: currentInvoiceData,
          pdfBase64: pdfBase64
        })
      });
      
      const result = await response.json();
      
      if (result.success) {
        saveBtn.innerHTML = '<i class="fas fa-check"></i> Saved!';
        saveBtn.classList.remove('btn-primary');
        saveBtn.classList.add('btn-success');
        
        // Show success message with invoice number
        alert(`Invoice saved successfully!\n\nInvoice Number: ${result.data.invoiceNumber}\n\nYou can view and manage all invoices in the Invoices page.`);
        
        setTimeout(() => {
          saveBtn.innerHTML = originalText;
          saveBtn.classList.remove('btn-success');
          saveBtn.classList.add('btn-primary');
          saveBtn.disabled = false;
        }, 2000);
      } else {
        throw new Error(result.message || 'Failed to save invoice');
      }
      
    } catch (error) {
      console.error('Error saving invoice:', error);
      alert('Error saving invoice: ' + error.message);
      saveBtn.innerHTML = originalText;
      saveBtn.disabled = false;
      
      // Restore page display on error
      const pageNav = document.querySelector('.invoice-page-nav');
      if (pageNav) pageNav.style.display = 'flex';
      updatePageDisplay();
    }
  }

