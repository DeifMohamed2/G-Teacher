        logging: false
      },
      jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' },
      pagebreak: { mode: ['css', 'legacy'], before: '.course-page' }
    };

    try {
      await html2pdf().set(opt).from(preview).save();
      
      // Restore page navigation and page display
      if (pageNav) pageNav.style.display = 'flex';
      updatePageDisplay();
    } catch (error) {
      console.error('Error generating PDF:', error);
