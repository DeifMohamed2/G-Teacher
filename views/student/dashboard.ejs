<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/images/KImage.png">
    <link rel="shortcut icon" type="image/png" href="/images/KImage.png">
    <link rel="apple-touch-icon" href="/images/KImage.png">

    <!-- CSS -->
    <link rel="stylesheet" href="/css/studentCSS/student-main.css">
    <link rel="stylesheet" href="/css/studentCSS/dashboard.css">
    <link rel="stylesheet" href="/css/theme-toggle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">

    <!-- Dashboard-specific styles with dark mode support -->
    <style>
        /* Dashboard-specific overrides with proper dark mode support */
        .stats-grid.enhanced {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: var(--spacing-md);
            margin-bottom: var(--spacing-xl);
        }

        .welcome-section.simple {
            background: var(--bg-card);
            color: var(--text-primary);
            border: 1px solid var(--border-color);
            border-radius: var(--radius-lg);
            padding: var(--spacing-2xl);
            margin-bottom: var(--spacing-2xl);
            transition: var(--transition-normal);
        }

        .welcome-section.simple:hover {
            box-shadow: var(--shadow-md);
            transform: translateY(-2px);
        }

        .welcome-title-simple {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: var(--spacing-sm);
        }

        .student-name-simple {
            color: var(--primary-color);
            font-weight: 600;
        }

        .welcome-content-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: var(--spacing-lg);
        }

        .back-home-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 14px 28px;
            font-size: 1rem;
            font-weight: 600;
            border-radius: var(--radius-md);
            box-shadow: var(--shadow-sm);
            transition: var(--transition-normal);
        }

        .back-home-btn:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        .back-home-btn i {
            font-size: 1.1rem;
        }

        /* Mobile Responsive */
        @media (max-width: 1024px) {
            .student-sidebar {
                transform: translateX(-100%);
            }

            .student-sidebar.open {
                transform: translateX(0);
            }

            .student-main {
                margin-left: 0;
            }
        }

        @media (max-width: 768px) {
            .welcome-title-simple {
                font-size: 1.5rem;
            }

            .stats-grid.enhanced {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 480px) {
            .welcome-title-simple {
                font-size: 1.25rem;
            }

            .welcome-content-row {
                flex-direction: column;
                align-items: stretch;
                text-align: center;
            }

            .back-home-btn {
                justify-content: center;
                width: 100%;
            }
        }

        /* Active Learning Paths - Scrollable Container */
        .courses-list {
            max-height: 600px;
            overflow-y: auto;
            overflow-x: hidden;
            padding-right: 8px;
        }

        /* Custom Scrollbar */
        .courses-list::-webkit-scrollbar {
            width: 8px;
        }

        .courses-list::-webkit-scrollbar-track {
            background: var(--bg-secondary);
            border-radius: var(--radius-sm);
        }

        .courses-list::-webkit-scrollbar-thumb {
            background: var(--border-color);
            border-radius: var(--radius-sm);
            transition: var(--transition-normal);
        }

        .courses-list::-webkit-scrollbar-thumb:hover {
            background: var(--primary-color);
        }

        /* Firefox scrollbar */
        .courses-list {
            scrollbar-width: thin;
            scrollbar-color: var(--border-color) var(--bg-secondary);
        }

        @media (max-width: 768px) {
            .courses-list {
                max-height: 500px;
            }
        }

        /* Active Learning Paths - Card style rows (closer to ELKABLY UI) */
        .learning-path-card {
            background: var(--bg-card);
            border-radius: var(--radius-lg);
            border: 1px solid var(--border-color);
            padding: var(--spacing-lg) var(--spacing-xl);
            display: flex;
            flex-direction: column;
            gap: 6px;
            transition: var(--transition-normal);
        }

        .learning-path-card+.learning-path-card {
            margin-top: var(--spacing-md);
        }

        .learning-path-card:hover {
            box-shadow: var(--shadow-md);
            transform: translateY(-2px);
            border-color: rgba(58, 146, 189, 0.4);
        }

        .learning-path-card-header {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 600;
            color: var(--text-primary);
        }

        .learning-path-card-header i {
            color: #3a92bd;
            font-size: 0.9rem;
        }

        .learning-path-card-subtitle {
            font-size: 0.85rem;
            color: var(--text-muted);
        }

        .learning-path-course-meta {
            font-size: 0.8rem;
            color: var(--text-muted);
        }

        .learning-path-card-footer {
            display: flex;
            justify-content: flex-end;
            margin-top: 4px;
        }

        .learning-path-card-footer .btn-primary {
            background: #3a92bd;
            border-color: #3a92bd;
            color: #fff;
            font-weight: 600;
            padding: 8px 18px;
            border-radius: 999px;
        }

        .learning-path-card-footer .btn-primary:hover {
            background: #2d7ba3;
            border-color: #2d7ba3;
        }

        /* Mobile Responsive */
        @media (max-width: 768px) {
            .learning-path-card {
                padding: var(--spacing-md) var(--spacing-lg);
            }

            .learning-path-card-footer .btn-primary {
                width: 100%;
                justify-content: center;
            }
        }

        /* Selected Teacher Banner */
        .selected-teacher-banner {
            background: linear-gradient(135deg, #3a92bd 0%, #1e5f7f 100%);
            border-radius: var(--radius-lg);
            padding: var(--spacing-xl);
            margin-bottom: var(--spacing-xl);
            color: white;
            display: flex;
            align-items: center;
            gap: var(--spacing-xl);
            box-shadow: 0 8px 25px rgba(58, 146, 189, 0.3);
        }

        .teacher-banner-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            border: 4px solid rgba(255, 255, 255, 0.3);
            flex-shrink: 0;
        }

        .teacher-banner-avatar-img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid rgba(255, 255, 255, 0.3);
        }

        .teacher-banner-avatar-initials {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            border: 4px solid rgba(255, 255, 255, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            font-weight: 700;
        }

        .teacher-banner-info {
            flex: 1;
        }

        .teacher-banner-label {
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
            opacity: 0.8;
            margin-bottom: 4px;
        }

        .teacher-banner-name {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 4px;
        }

        .teacher-banner-subject {
            font-size: 14px;
            opacity: 0.9;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .teacher-banner-stats {
            display: flex;
            gap: var(--spacing-lg);
        }

        .teacher-banner-stat {
            text-align: center;
            padding: var(--spacing-md) var(--spacing-lg);
            background: rgba(255, 255, 255, 0.15);
            border-radius: var(--radius-md);
        }

        .teacher-banner-stat-value {
            font-size: 1.5rem;
            font-weight: 700;
        }

        .teacher-banner-stat-label {
            font-size: 11px;
            opacity: 0.8;
        }

        .clear-teacher-btn {
            padding: 10px 20px;
            background: rgba(255, 255, 255, 0.2);
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 50px;
            color: white;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .clear-teacher-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            color: white;
        }

        @media (max-width: 768px) {
            .selected-teacher-banner {
                flex-direction: column;
                text-align: center;
                padding: var(--spacing-lg);
            }

            .teacher-banner-stats {
                flex-direction: row;
                width: 100%;
                justify-content: center;
            }

            .teacher-banner-name {
                font-size: 1.4rem;
            }
        }
    </style>

    <!-- Meta Tags -->
    <meta name="description" content="Student Dashboard - Track your learning progress and access your courses">
    <meta name="theme-color" content="#3a92bd">
</head>

<body class="<%= theme %>-theme">
    <!-- Student Layout -->
    <div class="student-layout">
        <!-- Include Sidebar -->
        <%- include('partials/student-sidebar', { currentPage: 'dashboard' , student: student }) %>

            <!-- Main Content -->
            <main class="student-main">
                <!-- Include Header -->
                <%- include('partials/student-header', { title: title, student: student, theme: theme,
                    currentPage: 'dashboard' , availableTeachers: typeof availableTeachers !=='undefined' ?
                    availableTeachers : [], selectedTeacherId: typeof selectedTeacherId !=='undefined' ?
                    selectedTeacherId : 'all' }) %>

                    <!-- Dashboard Content -->
                    <div class="student-content">
                        <!-- Selected Teacher Banner (shown when a specific teacher is selected) -->
                        <% if (typeof selectedTeacher !=='undefined' && selectedTeacher) { %>
                            <div class="selected-teacher-banner">
                                <% if (selectedTeacher.profilePicture) { %>
                                    <img src="<%= selectedTeacher.profilePicture %>"
                                        alt="<%= selectedTeacher.firstName %>" class="teacher-banner-avatar-img">
                                    <% } else { %>
                                        <div class="teacher-banner-avatar-initials">
                                            <%= selectedTeacher.firstName.charAt(0) %>
                                                <%= selectedTeacher.lastName.charAt(0) %>
                                        </div>
                                        <% } %>
                                            <div class="teacher-banner-info">
                                                <div class="teacher-banner-label">Viewing courses by</div>
                                                <div class="teacher-banner-name">
                                                    <%= selectedTeacher.firstName %>
                                                        <%= selectedTeacher.lastName %>
                                                </div>
                                                <% if (selectedTeacher.subject) { %>
                                                    <div class="teacher-banner-subject">
                                                        <i class="fas fa-book-reader"></i>
                                                        <%= selectedTeacher.subject %>
                                                    </div>
                                                    <% } %>
                                            </div>
                                            <div class="teacher-banner-stats">
                                                <div class="teacher-banner-stat">
                                                    <div class="teacher-banner-stat-value">
                                                        <%= selectedTeacher.courseCount || stats.totalCourses %>
                                                    </div>
                                                    <div class="teacher-banner-stat-label">Weeks</div>
                                                </div>
                                                <div class="teacher-banner-stat">
                                                    <div class="teacher-banner-stat-value">
                                                        <%= stats.completedCourses %>
                                                    </div>
                                                    <div class="teacher-banner-stat-label">Completed</div>
                                                </div>
                                            </div>
                                            <a href="/student/dashboard?teacher=all" class="clear-teacher-btn">
                                                <i class="fas fa-times"></i>
                                                View All
                                            </a>
                            </div>
                            <% } else { %>
                                <!-- Simple Welcome Section -->
                                <div class="welcome-section simple">
                                    <div class="welcome-content-row">
                                        <h1 class="welcome-title-simple">
                                            Welcome back, <span class="student-name-simple">
                                                <%= student.name %>!
                                            </span>
                                        </h1>
                                        <a href="/" class="btn btn-primary btn-lg back-home-btn">
                                            <i class="fas fa-home"></i>
                                            Back to Home
                                        </a>
                                    </div>
                                </div>
                                <% } %>

                                    <!-- Enhanced Stats Grid -->
                                    <div class="stats-grid enhanced">
                                        <div class="stat-card primary enhanced">
                                            <div class="stat-header">
                                                <div class="stat-icon">
                                                    <i class="fas fa-book-open"></i>
                                                </div>

                                            </div>
                                            <div class="stat-content">
                                                <div class="stat-value">
                                                    <%= stats.totalCourses %>
                                                </div>
                                                <div class="stat-label">Enrolled Weeks</div>
                                            </div>
                                        </div>

                                        <div class="stat-card success enhanced">
                                            <div class="stat-header">
                                                <div class="stat-icon">
                                                    <i class="fas fa-check-circle"></i>
                                                </div>

                                            </div>
                                            <div class="stat-content">
                                                <div class="stat-value">
                                                    <%= stats.completedCourses %>
                                                </div>
                                                <div class="stat-label">Completed Weeks</div>
                                            </div>
                                        </div>

                                        <div class="stat-card warning enhanced">
                                            <div class="stat-header">
                                                <div class="stat-icon">
                                                    <i class="fas fa-question-circle"></i>
                                                </div>

                                            </div>
                                            <div class="stat-content">
                                                <div class="stat-value">
                                                    <%= stats.totalQuizAttempts %>
                                                </div>
                                                <div class="stat-label">Quiz Attempts</div>
                                            </div>
                                        </div>

                                        <div class="stat-card info enhanced">
                                            <div class="stat-header">
                                                <div class="stat-icon">
                                                    <i class="fas fa-trophy"></i>
                                                </div>

                                            </div>
                                            <div class="stat-content">
                                                <div class="stat-value">
                                                    <%= stats.averageScore %>%
                                                </div>
                                                <div class="stat-label">Overall Score</div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Enhanced Main Content Grid -->
                                    <div class="main-content-grid">
                                        <!-- Left Column - Active Courses -->
                                        <div class="content-column">
                                            <!-- Simple Active Weeks -->
                                            <div class="card simple-card">
                                                <div class="card-header simple">
                                                    <h3 class="card-title">
                                                        <i class="fas fa-play-circle"></i>
                                                        Active learning paths
                                                    </h3>
                                                    <a href="/student/enrolled-courses" class="btn btn-outline btn-sm">
                                                        View All
                                                    </a>
                                                </div>
                                                <div class="card-body">
                                                    <% if (activeCourses && activeCourses.length> 0) { %>
                                                        <div class="courses-list">
                                                            <% activeCourses.forEach(course=> {
                                                                const courseTitle = course.title || 'Course';
                                                                const teacherName = course.teacher ?
                                                                `${course.teacher.firstName} ${course.teacher.lastName}`
                                                                : null;
                                                                %>
                                                                <div class="learning-path-card">
                                                                    <div class="learning-path-card-header">
                                                                        <i class="fas fa-book"></i>
                                                                        <span>
                                                                            <%= courseTitle %>
                                                                        </span>
                                                                    </div>
                                                                    <div class="learning-path-card-subtitle">
                                                                        <% if (teacherName) { %>
                                                                            <span>By <%= teacherName %></span>
                                                                            <% } else { %>
                                                                                <span>Session Notes</span>
                                                                                <% } %>
                                                                    </div>
                                                                    <div class="learning-path-course-meta">
                                                                        <% if (course.lastAccessed) { %>
                                                                            Last accessed: <%= new
                                                                                Date(course.lastAccessed).toLocaleDateString()
                                                                                %>
                                                                                <% } else { %>
                                                                                    Status: <%= course.status
                                                                                        || 'active' %>
                                                                                        <% } %>
                                                                    </div>
                                                                    <div class="learning-path-card-footer">
                                                                        <a href="/student/course/<%= course._id %>/content"
                                                                            class="btn btn-primary btn-sm">
                                                                            <i class="fas fa-play"></i>
                                                                            Continue Learning
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                                <% }); %>
                                                        </div>
                                                        <% } else { %>
                                                            <div class="empty-state">
                                                                <div class="empty-icon">
                                                                    <i class="fas fa-book-open"></i>
                                                                </div>
                                                                <h4>No Active Weeks</h4>
                                                                <p>Start your learning journey by enrolling in a course
                                                                </p>
                                                                <a href="/" class="btn btn-primary enhanced">
                                                                    <i class="fas fa-search"></i>
                                                                    Browse Weeks
                                                                </a>
                                                            </div>
                                                            <% } %>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Right Column - Quizzes and Activity -->
                                        <div class="sidebar-column">
                                            <!-- Enhanced Recent Activity -->
                                            <div class="card simple-card">
                                                <div class="card-header simple">
                                                    <h3 class="card-title">
                                                        <i class="fas fa-history"></i>
                                                        Activity History
                                                    </h3>
                                                </div>
                                                <div class="card-body">
                                                    <% if (recentProgress && recentProgress.length> 0) { %>
                                                        <div class="activity-timeline">
                                                            <% recentProgress.forEach((activity, index)=> { %>
                                                                <div
                                                                    class="activity-item <%= index === 0 ? 'latest' : '' %>">
                                                                    <div class="activity-indicator">
                                                                        <div class="activity-icon">
                                                                            <i
                                                                                class="fas fa-<%= getActivityIcon(activity.activity) %>"></i>
                                                                        </div>
                                                                        <% if (index < recentProgress.length - 1) { %>
                                                                            <div class="activity-line"></div>
                                                                            <% } %>
                                                                    </div>
                                                                    <div class="activity-content">
                                                                        <div class="activity-main">
                                                                            <h4 class="activity-title">
                                                                                <%= getActivityText(activity.activity)
                                                                                    %>
                                                                            </h4>
                                                                            <p class="activity-description">
                                                                                <%= activity.course ?
                                                                                    activity.course.title
                                                                                    : 'General activity' %>
                                                                            </p>
                                                                        </div>
                                                                        <div class="activity-meta">
                                                                            <span class="activity-time">
                                                                                <%= new
                                                                                    Date(activity.timestamp).toLocaleDateString()
                                                                                    %>
                                                                            </span>
                                                                            <% if (activity.points> 0) { %>
                                                                                <span class="activity-points">
                                                                                    <i class="fas fa-star"></i>
                                                                                    +<%= activity.points %> pts
                                                                                </span>
                                                                                <% } %>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <% }); %>
                                                        </div>
                                                        <% } else { %>
                                                            <div class="empty-state">
                                                                <div class="empty-icon">
                                                                    <i class="fas fa-clock"></i>
                                                                </div>
                                                                <h4>No Recent Activity</h4>
                                                                <p>Start learning to see your activity here</p>
                                                            </div>
                                                            <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                    </div>
            </main>
    </div>

    <!-- JavaScript -->
    <script>
        // Helper functions for activity display
        function getActivityIcon(activity) {
            const icons = {
                'course_started': 'play',
                'course_completed': 'check-circle',
                'topic_started': 'play-circle',
                'topic_completed': 'check',
                'quiz_attempted': 'question-circle',
                'quiz_completed': 'flag-checkered',
                'quiz_passed': 'trophy',
                'quiz_failed': 'times-circle',
                'homework_submitted': 'paper-plane',
                'homework_graded': 'clipboard-check',
                'certificate_earned': 'certificate',
                'badge_earned': 'medal',
                'streak_achieved': 'fire',
                'milestone_reached': 'star'
            };
            return icons[activity] || 'clock';
        }

        function getActivityText(activity) {
            const texts = {
                'course_started': 'Started a new course',
                'course_completed': 'Completed a course',
                'topic_started': 'Started a new topic',
                'topic_completed': 'Completed a topic',
                'quiz_attempted': 'Attempted a quiz',
                'quiz_completed': 'Completed a quiz',
                'quiz_passed': 'Passed a quiz',
                'quiz_failed': 'Failed a quiz',
                'homework_submitted': 'Submitted homework',
                'homework_graded': 'Homework graded',
                'certificate_earned': 'Earned a certificate',
                'badge_earned': 'Earned a badge',
                'streak_achieved': 'Achieved a streak',
                'milestone_reached': 'Reached a milestone'
            };
            return texts[activity] || 'Activity recorded';
        }

        // Make functions available globally
        window.getActivityIcon = getActivityIcon;
        window.getActivityText = getActivityText;
    </script>
</body>

</html>