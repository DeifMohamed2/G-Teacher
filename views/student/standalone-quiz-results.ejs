<body class="<%= theme %>-theme">
    <!-- Student Layout -->
    <div class="student-layout">
        <!-- Include Sidebar -->
        <%- include('partials/student-sidebar', { currentPage: 'quizzes', student: student }) %>
        
        <!-- Main Content -->
        <main class="student-main">
            <!-- Include Header -->
            <%- include('partials/student-header', { title: 'Quiz Results', student: student, theme: theme, currentPage: 'quiz-results' }) %>
            
            <!-- Results Content -->
            <div class="student-content">
                <div class="results-container">
                    <!-- Back Button -->
                    <div class="back-button-container">
                        <a href="/student/quiz/<%= quiz._id %>/details" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i>
                            Back to Quiz Details
                        </a>
                    </div>

                    <!-- Results Header -->
                    <div class="results-header">
                        <h1 class="results-title">
                            <i class="fas fa-question-circle"></i>
                            <%= quiz.title %>
                        </h1>
                        <p class="results-subtitle">Quiz Results & Performance Analysis</p>
                        
                            <!-- Score Display -->
                        <% if (latestAttempt) { %>
                            <div class="score-display">
                                <div class="score-circle <%= latestAttempt.passed ? 'passed' : 'failed' %>">
                                    <%= latestAttempt.score %>%
                                </div>
                                <div class="score-details">
                            <h3>Your Score</h3>
                                    <p><%= latestAttempt.correctAnswers %> out of <%= latestAttempt.totalQuestions %> correct</p>
                                    <p>Time Spent: <%= Math.floor(latestAttempt.timeSpent / 60) %>m <%= latestAttempt.timeSpent % 60 %>s</p>
                                    <p>Completed: <%= new Date(latestAttempt.completedAt).toLocaleString() %></p>
                                    <div class="pass-status <%= latestAttempt.passed ? 'passed' : 'failed' %>">
                                        <%= latestAttempt.passed ? 'PASSED' : 'FAILED' %>
                                    </div>
                                </div>
                            </div>
                        <% } else { %>
                        <div class="score-display">
                            <div class="score-circle no-attempt">
                                No Attempts
                            </div>
                            <div class="score-details">
                                <h3>No Quiz Attempts</h3>
                                <p>You haven't taken this quiz yet.</p>
                                </div>
                            </div>
                        <% } %>
                    </div>

                    <!-- Stats Grid -->
                    <div class="stats-grid">
                        <div class="stat-card">
                            <div class="stat-icon">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <div class="stat-value"><%= bestScore || 0 %>%</div>
                            <div class="stat-label">Best Score</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon">
                                <i class="fas fa-redo"></i>
                            </div>
                            <div class="stat-value"><%= attemptHistory ? attemptHistory.length : 0 %></div>
                            <div class="stat-label">Total Attempts</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="stat-value"><%= latestAttempt ? Math.floor(latestAttempt.timeSpent / 60) : 0 %>m</div>
                            <div class="stat-label">Time Spent</div>
                            </div>
                        <div class="stat-card">
                            <div class="stat-icon">
                                <i class="fas fa-trophy"></i>
                            </div>
                            <div class="stat-value"><%= quiz.passingScore %>%</div>
                            <div class="stat-label">Passing Score</div>
                        </div>
                    </div>

                    <!-- Attempt History -->
                        <div class="attempt-history">
                        <h3>
                                <i class="fas fa-history"></i>
                                Attempt History
                        </h3>
                            <% attemptHistory.forEach((attempt, index) => { %>
                                <div class="attempt-item">
                                <div class="attempt-info">
                                    <div class="attempt-number"><%= attempt.attemptNumber %></div>
                                    <div class="attempt-details">
                                        <h4>Attempt <%= attempt.attemptNumber %></h4>
                                        <p>Completed on <%= new Date(attempt.completedAt).toLocaleString() %></p>
                                        </div>
                                    </div>
                                    <div class="attempt-score">
                                    <div class="score <%= attempt.passed ? 'passed' : 'failed' %>">
                                            <%= attempt.score %>%
                                    </div>
                                    <div class="status">
                                        <%= attempt.passed ? 'Passed' : 'Failed' %>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>

                    <!-- Answer Review -->
                    <% if (canShowAnswers && quiz.selectedQuestions) { %>
                        <div class="answer-review">
                            <h3>
                                    <i class="fas fa-eye"></i>
                                    Answer Review
                            </h3>
                                    <% quiz.selectedQuestions.forEach((selectedQ, index) => { %>
                                        <% 
                                            const question = selectedQ.question;
                                            const userAnswer = latestAttempt.answers.find(a => a.questionId.toString() === question._id.toString());
                                            const isCorrect = userAnswer ? userAnswer.isCorrect : false;
                                        %>
                                <div class="question-review">
                                    <div class="question-header">
                                        <div class="question-number">Question <%= index + 1 %></div>
                                        <div class="question-status <%= isCorrect ? 'correct' : 'incorrect' %>">
                                                    <%= isCorrect ? 'Correct' : 'Incorrect' %>
                                                </div>
                                            </div>
                                            
                                    <div class="question-text" data-math-content="<%= question.questionText %>">
                                        <!-- Math expressions will be rendered by JavaScript -->
                                    </div>
                                                
                                    <!-- Question Image -->
                                    <% if (question.questionImage && question.questionImage.trim() !== '') { %>
                                        <div class="question-image-container" onclick="previewImage('<%= question.questionImage %>')">
                                            <img class="question-image" src="<%= question.questionImage %>" alt="Question Image">
                                            <div class="image-overlay">
                                                <i class="fas fa-search-plus"></i>
                                                <span>Click to preview</span>
                                            </div>
                                        </div>
                                    <% } %>
                                    
                                    <% if (question.questionType === 'Written') { %>
                                        <!-- Written Question Answer Review -->
                                        <div class="written-question-container">
                                            <div class="written-question-note">
                                                <div class="note-icon">
                                                    <i class="fas fa-info-circle"></i>
                                                </div>
                                                <div class="note-content">
                                                    <strong>Note:</strong> If you think there are two answers, type them like this: <code>10,-10</code>
                                                </div>
                                            </div>
                                            
                                            <!-- User's Answer -->
                                            <div class="written-answer-display <%= isCorrect ? 'correct' : (userAnswer && userAnswer.selectedAnswer ? 'incorrect' : 'empty') %>">
                                                <strong>Your Answer:</strong><br>
                                                <%= userAnswer && userAnswer.selectedAnswer ? userAnswer.selectedAnswer : 'No answer provided' %>
                                            </div>
                                            
                                            <!-- Correct Answer(s) -->
                                            <div class="correct-answer-display">
                                                <div class="correct-answer-label">
                                                    <i class="fas fa-check-circle"></i>
                                                    Correct Answer<%= question.correctAnswers && question.correctAnswers.length > 1 ? 's' : '' %>:
                                                </div>
                                                <div class="correct-answer-text" data-math-content="<%= question.correctAnswers && question.correctAnswers.length > 0 ? 
                                                    question.correctAnswers.map(ca => (typeof ca === 'string' ? ca : ca.text)).join(', ') : 
                                                    'No correct answers defined' %>">
                                                    <!-- Math expressions will be rendered by JavaScript -->
                                                </div>
                                            </div>
                                        </div>
                                    <% } else { %>
                                        <!-- MCQ/True-False Options Review -->
                                        <div class="options-review">
                                                    <% question.options.forEach((option, optionIndex) => { %>
                                                        <% 
                                                            const isSelected = userAnswer && userAnswer.selectedAnswer === optionIndex.toString();
                                                            const isCorrectOption = optionIndex.toString() === question.correctAnswer;
                                                    let optionClass = 'neutral';
                                                    let indicatorClass = 'neutral';
                                                            
                                                            if (isCorrectOption) {
                                                                optionClass = 'correct';
                                                                indicatorClass = 'correct';
                                                            } else if (isSelected && !isCorrectOption) {
                                                                optionClass = 'incorrect';
                                                                indicatorClass = 'incorrect';
                                                            } else if (isSelected) {
                                                                optionClass = 'selected';
                                                                indicatorClass = 'selected';
                                                            }
                                                        %>
                                                <div class="option-review <%= optionClass %>">
                                                    <div class="option-indicator <%= indicatorClass %>">
                                                                <%= String.fromCharCode(65 + optionIndex) %>
                                                            </div>
                                                    <div class="option-text" data-math-content="<%= option.text || '' %>">
                                                        <!-- Math expressions will be rendered by JavaScript -->
                                                    </div>
                                                    <% if (option.image && option.image.trim() !== '') { %>
                                                        <div class="option-image-container" onclick="previewImage('<%= option.image %>')">
                                                            <img class="option-image" src="<%= option.image %>" alt="Option image">
                                                            <div class="option-image-overlay">
                                                                <i class="fas fa-search-plus"></i>
                                                            </div>
                                                        </div>
                                                            <% } %>
                                                        </div>
                                                    <% }); %>
                                                </div>
                                    <% } %>
                                                
                                                <% if (question.explanation && question.explanation.trim() !== '') { %>
                                        <div class="answer-explanation">
                                            <h5>Explanation:</h5>
                                            <p><%= question.explanation %></p>
                                                    </div>
                                                <% } %>
                                        </div>
                                    <% }); %>
                            </div>
                    <% } else if (!canShowAnswers) { %>
                        <div class="answer-review">
                            <h3>
                                    <i class="fas fa-lock"></i>
                                    Answer Review Not Available
                            </h3>
                            <p>Answer review is not enabled for this quiz. Contact your instructor if you have questions about your answers.</p>
                        </div>
                    <% } %>

                    <!-- Action Buttons -->
                    <div class="action-buttons">
                        <a href="/student/quiz/<%= quiz._id %>/details" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i>
                            Back to Quiz Details
                        </a>
                        <a href="/student/quizzes" class="btn btn-primary">
                            <i class="fas fa-list"></i>
                            All Quizzes
                        </a>
                        <% if (latestAttempt && !latestAttempt.passed && attemptHistory && attemptHistory.length < (quiz.maxAttempts || 3)) { %>
                            <a href="/student/quiz/<%= quiz._id %>/take" class="btn btn-success">
                                <i class="fas fa-redo"></i>
                                Try Again
                            </a>
                        <% } %>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Image Preview Modal -->
    <div id="imagePreviewModal" class="image-preview-modal" onclick="closeImagePreview()">
        <div class="image-preview-content" onclick="event.stopPropagation()">
            <button class="image-preview-close" onclick="closeImagePreview()">
                <i class="fas fa-times"></i>
            </button>
            <img id="previewImage" src="" alt="Preview">
        </div>
    </div>

    <!-- JavaScript for Image Preview and Math Rendering -->
    <script>
        // Parse text and replace $...$ patterns with MathLive fields
        function parseMathExpressions(text) {
            if (!text) return '';
            
            // Regular expression to match $...$ patterns (non-greedy)
            const mathPattern = /\$([^$]+)\$/g;
            const parts = [];
            let lastIndex = 0;
            let match;
            let mathIndex = 0;
            
            while ((match = mathPattern.exec(text)) !== null) {
                // Add text before the math expression
                if (match.index > lastIndex) {
                    parts.push({
                        type: 'text',
                        content: text.substring(lastIndex, match.index)
                    });
                }
                
                // Add the math expression
                parts.push({
                    type: 'math',
                    content: match[1], // Content inside $...$
                    index: mathIndex++
                });
                
                lastIndex = match.index + match[0].length;
            }
            
            // Add remaining text after the last math expression
            if (lastIndex < text.length) {
                parts.push({
                    type: 'text',
                    content: text.substring(lastIndex)
                });
            }
            
            // If no math expressions found, return the original text
            if (parts.length === 0) {
                return escapeHtml(text);
            }
            
            // Build HTML with MathLive fields for math expressions
            let html = '';
            parts.forEach(part => {
                if (part.type === 'text') {
                    html += escapeHtml(part.content);
                } else {
                    // Create a unique ID for each math field
                    const mathId = `math-field-${Date.now()}-${Math.random()}-${part.index}`;
                    html += `<math-field id="${mathId}" readonly style="display: inline-block; min-height: 24px; font-size: 16px; border: none; background: transparent; padding: 2px 4px; vertical-align: middle; color: inherit;" class="preview-math-field">${escapeHtml(part.content)}</math-field>`;
                }
            });
            
            return html;
        }
        
        // Escape HTML to prevent XSS
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Initialize math fields after page load
        function initializeMathFields() {
            // Wait for MathLive to be ready
            if (typeof MathLive === 'undefined') {
                setTimeout(initializeMathFields, 100);
                return;
            }

            // Find all elements with data-math-content attribute and render them
            document.querySelectorAll('[data-math-content]').forEach(element => {
                const mathContent = element.getAttribute('data-math-content');
                if (mathContent) {
                    element.innerHTML = parseMathExpressions(mathContent);
                }
            });

            // Configure MathLive for dark mode if needed
            const isDarkMode = document.body.classList.contains('dark-theme');
            if (isDarkMode && typeof MathLive !== 'undefined' && MathLive.config) {
                try {
                    MathLive.config({
                        defaultMode: 'math',
                    });
                } catch (e) {
                    console.warn('MathLive config warning:', e);
                }
            }

            // Initialize all math-field elements
            const mathFields = document.querySelectorAll('math-field');
            mathFields.forEach((field) => {
                try {
                    if (field && typeof MathLive !== 'undefined') {
                        // Set color for dark mode
                        if (isDarkMode) {
                            field.style.color = '#f1f5f9';
                        }
                        // MathLive will automatically initialize math-field elements
                        // Force update if needed
                        if (field.update) {
                            field.update();
                        }
                        // Also update the internal MathLive elements for dark mode
                        if (isDarkMode) {
                            setTimeout(() => {
                                const mathlive = field.querySelector('.ML__mathlive');
                                if (mathlive) {
                                    mathlive.style.color = '#f1f5f9';
                                }
                                const base = field.querySelector('.ML__base');
                                if (base) {
                                    base.style.color = '#f1f5f9';
                                }
                            }, 100);
                        }
                    }
                } catch (e) {
                    console.warn('MathLive initialization warning:', e);
                }
            });
        }

        // Image preview functions
        function previewImage(imageSrc) {
            const modal = document.getElementById('imagePreviewModal');
            const previewImg = document.getElementById('previewImage');
            
            if (!modal || !previewImg) {
                return;
            }
            
            previewImg.src = imageSrc;
            modal.classList.add('show');
            
            // Prevent body scroll when modal is open
            document.body.style.overflow = 'hidden';
        }

        function closeImagePreview() {
            const modal = document.getElementById('imagePreviewModal');
            modal.classList.remove('show');
            
            // Restore body scroll
            document.body.style.overflow = '';
        }

        // Close image preview on escape key
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeImagePreview();
            }
        });

        // Initialize math fields when DOM is ready
        document.addEventListener('DOMContentLoaded', function() {
            initializeMathFields();
        });
    </script>
