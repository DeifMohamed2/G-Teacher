    <meta name="description" content="<%= quiz.title %> - Quiz Details">
    <meta name="theme-color" content="#dc2626">
</head>
<body class="<%= theme %>-theme">
    <!-- Student Layout -->
    <div class="student-layout">
        <!-- Include Sidebar -->
        <%- include('partials/student-sidebar', { currentPage: 'quizzes', student: student }) %>
        
        <!-- Main Content -->
        <main class="student-main">
            <!-- Include Header -->
            <%- include('partials/student-header', { title: 'Quiz Details', student: student, theme: theme, currentPage: 'quiz-details' }) %>
            
            <!-- Quiz Details Content -->
            <div class="student-content">
                <div class="quiz-details-container">
                    <!-- Quiz Header -->
                    <div class="quiz-details-header">
                        <div class="quiz-header-content">
                            <div class="quiz-title-section">
                                <div class="quiz-icon">
                                    <i class="fas fa-question-circle"></i>
                                </div>
                                <div class="quiz-title-main">
                                    <h1 class="quiz-title"><%= quiz.title %></h1>
                                    <div class="quiz-code"><%= quiz.code %></div>
                                </div>
                            </div>
                            
                            <div class="quiz-description">
                                <%= quiz.description || 'No description available' %>
                            </div>
                            
                            <div class="quiz-meta-grid">
                                <div class="quiz-meta-item">
                                    <div class="meta-icon">
                                        <i class="fas fa-question-circle"></i>
                                    </div>
                                    <div class="meta-label">Questions</div>
                                    <div class="meta-value"><%= quiz.totalQuestions || 0 %></div>
                                </div>
                                
                                <div class="quiz-meta-item">
                                    <div class="meta-icon">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <div class="meta-label">Duration</div>
                                    <div class="meta-value">
                                        <% if (quiz.duration && quiz.duration > 0) { %>
                                            <%= quiz.duration %> minutes
                                        <% } else { %>
                                            No time limit
                                        <% } %>
                                    </div>
                                </div>
                                
                                <div class="quiz-meta-item">
                                    <div class="meta-icon">
                                        <i class="fas fa-trophy"></i>
                                    </div>
                                    <div class="meta-label">Passing Score</div>
                                    <div class="meta-value"><%= quiz.passingScore || 60 %>%</div>
                                </div>
                                
                                <div class="quiz-meta-item">
                                    <div class="meta-icon">
                                        <i class="fas fa-redo"></i>
                                    </div>
                                    <div class="meta-label">Max Attempts</div>
                                    <div class="meta-value"><%= quiz.maxAttempts || 1 %></div>
                                </div>
                                
                                <div class="quiz-meta-item">
                                    <div class="meta-icon">
                                        <i class="fas fa-signal"></i>
                                    </div>
                                    <div class="meta-label">Difficulty</div>
                                    <div class="meta-value"><%= quiz.difficulty ? quiz.difficulty.charAt(0).toUpperCase() + quiz.difficulty.slice(1) : 'Medium' %></div>
                                </div>
                                
                                <div class="quiz-meta-item">
                                    <div class="meta-icon">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div class="meta-label">Created By</div>
                                    <div class="meta-value"><%= quiz.createdBy ? quiz.createdBy.name : 'Admin' %></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Main Content -->
                    <div class="quiz-details-content">
                        <!-- Quiz Info Section -->
                        <div class="quiz-info-section">
                            <h2 class="section-title">
                                <i class="fas fa-info-circle"></i>
                                Quiz Information
                            </h2>
                            
                            <% if (quiz.instructions && quiz.instructions.trim() !== '') { %>
                                <div class="quiz-instructions">
                                    <div class="instructions-title">Instructions</div>
                                    <div class="instructions-text"><%= quiz.instructions %></div>
                                </div>
                            <% } %>
                            
                            <div class="quiz-features">
                                <div class="feature-item">
                                    <div class="feature-icon">
                                        <i class="fas fa-random"></i>
                                    </div>
                                    <div class="feature-content">
                                        <div class="feature-title">Question Shuffling</div>
                                        <div class="feature-description">
                                            <%= quiz.shuffleQuestions ? 'Questions will be shuffled' : 'Questions in fixed order' %>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="feature-item">
                                    <div class="feature-icon">
                                        <i class="fas fa-list"></i>
                                    </div>
                                    <div class="feature-content">
                                        <div class="feature-title">Option Shuffling</div>
                                        <div class="feature-description">
                                            <%= quiz.shuffleOptions ? 'Options will be shuffled' : 'Options in fixed order' %>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="feature-item">
                                    <div class="feature-icon">
                                        <i class="fas fa-eye"></i>
                                    </div>
                                    <div class="feature-content">
                                        <div class="feature-title">Show Correct Answers</div>
                                        <div class="feature-description">
                                            <%= quiz.showCorrectAnswers ? 'Correct answers will be shown' : 'Correct answers hidden' %>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="feature-item">
                                    <div class="feature-icon">
                                        <i class="fas fa-chart-bar"></i>
                                    </div>
                                    <div class="feature-content">
                                        <div class="feature-title">Show Results</div>
                                        <div class="feature-description">
                                            <%= quiz.showResults ? 'Results will be shown' : 'Results hidden' %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Sidebar -->
                        <div class="quiz-sidebar">
                            <!-- Attempt Status -->
                            <div class="sidebar-section">
                                <h3 class="sidebar-title">
                                    <i class="fas fa-user-check"></i>
                                    Your Status
                                </h3>
                                
                                <div class="attempt-status">
                                    <% if (activeAttempt) { %>
                                        <div class="status-header">
                                            <div class="status-icon in-progress">
                                                <i class="fas fa-play"></i>
                                            </div>
                                            <div>
                                                <div class="status-title">Quiz In Progress</div>
                                                <div class="status-description">You have an active attempt</div>
                                            </div>
                                        </div>
                                        
                                        <% if (timing && timing.durationMinutes > 0) { %>
                                            <div class="timer-info">
                                                <div class="timer-header">
                                                    <i class="fas fa-clock timer-icon"></i>
                                                    <div class="timer-title">Time Remaining</div>
                                                </div>
                                                <div class="timer-display" id="timerDisplay">
                                                    <%= Math.floor(timing.remainingSeconds / 60) %>:<%= String(timing.remainingSeconds % 60).padStart(2, '0') %>
                                                </div>
                                                <div class="timer-note">
                                                    <% if (timing.isExpired) { %>
                                                        Time has expired
                                                    <% } else { %>
                                                        Continue your attempt
                                                    <% } %>
                                                </div>
                                            </div>
                                        <% } else if (timing && timing.durationMinutes === 0) { %>
                                            <div class="timer-info">
                                                <div class="timer-header">
                                                    <i class="fas fa-infinity timer-icon"></i>
                                                    <div class="timer-title">No Time Limit</div>
                                                </div>
                                                <div class="timer-display" id="timerDisplay">
                                                    âˆž
                                                </div>
                                                <div class="timer-note">
                                                    Take your time
                                                </div>
                                            </div>
                                        <% } %>
                                    <% } else if (canAttempt.canAttempt) { %>
                                        <div class="status-header">
                                            <div class="status-icon available">
                                                <i class="fas fa-check"></i>
                                            </div>
                                            <div>
                                                <div class="status-title">Ready to Start</div>
                                                <div class="status-description">You can begin the quiz</div>
                                            </div>
                                        </div>
                                        
                                        <div class="status-details">
                                            <div class="status-detail-item">
                                                <span class="status-detail-label">Attempts Left:</span>
                                                <span class="status-detail-value"><%= canAttempt.attemptsLeft %></span>
                                            </div>
                                            <% if (bestScore !== null) { %>
                                                <div class="status-detail-item">
                                                    <span class="status-detail-label">Best Score:</span>
                                                    <span class="status-detail-value">
                                                        <% 
                                                            // Find the attempt with the best score to get correctAnswers and totalQuestions
                                                            const bestAttempt = attemptHistory.find(attempt => attempt.score === bestScore);
                                                            if (bestAttempt && bestAttempt.correctAnswers !== undefined && bestAttempt.totalQuestions !== undefined) {
                                                        %>
                                                            <%= bestAttempt.correctAnswers %>/<%= bestAttempt.totalQuestions %>
                                                        <% } else { %>
                                                            <%= bestScore %>%
                                                        <% } %>
                                                    </span>
                                                </div>
                                            <% } %>
                                        </div>
                                    <% } else { %>
                                        <div class="status-header">
                                            <div class="status-icon limited">
                                                <i class="fas fa-times"></i>
                                            </div>
                                            <div>
                                                <div class="status-title">Attempts Exhausted</div>
                                                <div class="status-description"><%= canAttempt.reason %></div>
                                            </div>
                                        </div>
                                        
                                        <% if (bestScore !== null) { %>
                                            <div class="status-details">
                                                <div class="status-detail-item">
                                                    <span class="status-detail-label">Best Score:</span>
                                                    <span class="status-detail-value">
                                                        <% 
                                                            // Find the attempt with the best score to get correctAnswers and totalQuestions
                                                            const bestAttempt = attemptHistory.find(attempt => attempt.score === bestScore);
                                                            if (bestAttempt && bestAttempt.correctAnswers !== undefined && bestAttempt.totalQuestions !== undefined) {
                                                        %>
                                                            <%= bestAttempt.correctAnswers %>/<%= bestAttempt.totalQuestions %>
                                                        <% } else { %>
                                                            <%= bestScore %>%
                                                        <% } %>
                                                    </span>
                                                </div>
                                            </div>
                                        <% } %>
                                    <% } %>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="sidebar-section">
                                <div class="action-buttons">
                                    <% if (activeAttempt) { %>
                                        <a href="/student/quiz/<%= quiz._id %>/take" class="btn-resume-quiz">
                                            <i class="fas fa-play"></i>
                                            Resume Quiz
                                        </a>
                                    <% } else if (canAttempt.canAttempt) { %>
                                        <a href="/student/quiz/<%= quiz._id %>/start" class="btn-start-quiz">
                                            <i class="fas fa-play"></i>
                                            Start Quiz
                                        </a>
                                    <% } else { %>
                                        <button class="btn-start-quiz" disabled>
                                            <i class="fas fa-lock"></i>
                                            Cannot Start Quiz
                                        </button>
                                    <% } %>
                                    
                                    <% if (attemptHistory && attemptHistory.length > 0) { %>
                                        <a href="/student/quiz/<%= quiz._id %>/results" class="btn-view-results">
                                            <i class="fas fa-chart-line"></i>
                                            View Results
                                        </a>
                                    <% } %>
                                </div>
                            </div>

                            <!-- Attempt History -->
                            <% if (attemptHistory && attemptHistory.length > 0) { %>
                                <div class="sidebar-section">
                                    <h3 class="sidebar-title">
                                        <i class="fas fa-history"></i>
                                        Attempt History
                                    </h3>
                                    
                                    <div class="attempt-history">
                                        <% attemptHistory.forEach(attempt => { %>
                                            <div class="attempt-item">
                                                <div class="attempt-header">
                                                    <div class="attempt-number">Attempt <%= attempt.attemptNumber %></div>
                                                <div class="attempt-date">
                                                    <%= attempt.completedAt ? new Date(attempt.completedAt).toLocaleDateString() : 'In Progress' %>
                                                </div>
                                                </div>
                                                <div class="attempt-score">
                                                    <span class="score-label">Score:</span>
                                                    <span class="score-value <%= attempt.passed ? 'passed' : 'failed' %>">
                                                        <% if (attempt.correctAnswers !== undefined && attempt.totalQuestions !== undefined) { %>
                                                            <%= attempt.correctAnswers %>/<%= attempt.totalQuestions %>
                                                        <% } else { %>
                                                            <%= attempt.score !== undefined ? attempt.score : 0 %>%
                                                        <% } %>
                                                    </span>
                                                </div>
                                            </div>
                                        <% }); %>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- JavaScript -->
    <script>
        // Global error handler for unhandled JavaScript errors
        window.addEventListener('error', function(e) {
            console.error('Unhandled error:', e.error);
            // Show a user-friendly error message
            const errorDiv = document.createElement('div');
            errorDiv.style.cssText = 'position: fixed; top: 20px; right: 20px; background: #ef4444; color: white; padding: 1rem; border-radius: 8px; z-index: 1000; max-width: 300px;';
            errorDiv.innerHTML = '<i class="fas fa-exclamation-triangle"></i> An error occurred. Please refresh the page.';
            document.body.appendChild(errorDiv);
            setTimeout(() => errorDiv.remove(), 5000);
        });

        // Handle unhandled promise rejections
        window.addEventListener('unhandledrejection', function(e) {
            console.error('Unhandled promise rejection:', e.reason);
            // Show a user-friendly error message
            const errorDiv = document.createElement('div');
            errorDiv.style.cssText = 'position: fixed; top: 20px; right: 20px; background: #ef4444; color: white; padding: 1rem; border-radius: 8px; z-index: 1000; max-width: 300px;';
            errorDiv.innerHTML = '<i class="fas fa-exclamation-triangle"></i> An error occurred. Please refresh the page.';
            document.body.appendChild(errorDiv);
            setTimeout(() => errorDiv.remove(), 5000);
        });
    </script>

    <% if (activeAttempt && timing && !timing.isExpired) { %>
    <script>
        // Update timer for active attempt
        (function() {
            let remainingSeconds = <%- JSON.stringify(timing.remainingSeconds || 0) %>;
            
            function updateTimer() {
                const minutes = Math.floor(remainingSeconds / 60);
                const seconds = remainingSeconds % 60;
                const timeString = `${minutes}:${String(seconds).padStart(2, '0')}`;
                
                const timerDisplay = document.getElementById('timerDisplay');
                if (timerDisplay) {
                    timerDisplay.textContent = timeString;
                }
                
                if (remainingSeconds <= 0) {
                    // Time expired, reload page to update status
                    window.location.reload();
                } else {
                    remainingSeconds--;
                }
            }
            
            // Update timer every second
            setInterval(updateTimer, 1000);
        })();
    </script>
    <% } %>
</body>
</html>
