                    } else {
                        throw new Error(error.message || 'Failed to update profile');
                    }
                }
            } catch (error) {
                console.error('Error updating profile:', error);
                showNotification(error.message || 'Error updating profile', 'error');
            } finally {
                // Reset save button
                saveBtn.innerHTML = originalContent;
                saveBtn.disabled = false;
            }
        });
        
        // Send OTP for student phone number
        async function sendStudentOTP() {
            const studentNumberInput = document.querySelector('input[name="studentNumber"]');
            const studentCountryCodeSelect = document.querySelector('select[name="studentCountryCode"]');
            const sendBtn = document.getElementById('sendStudentOtpBtn');
            const otpInputGroup = document.getElementById('studentOtpInputGroup');
            const otpStatus = document.getElementById('studentOtpStatus');
            const otpTimer = document.getElementById('studentOtpTimer');
            const countdownSpan = document.getElementById('studentOtpCountdown');
            
            if (!studentNumberInput || !studentCountryCodeSelect) {
                showNotification('Phone number fields not found', 'error');
                return;
            }
            
            const phoneNumber = studentNumberInput.value.replace(/[^\d]/g, '');
            const countryCode = studentCountryCodeSelect.value;
            
            if (!phoneNumber || !countryCode) {
                showNotification('Please enter a valid phone number', 'error');
                return;
            }
            
            // Disable send button
            sendBtn.disabled = true;
            sendBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sending...';
            
            try {
                const response = await fetch('/student/profile/send-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        phoneNumber: phoneNumber,
                        countryCode: countryCode
                    })
                });
                
                const result = await response.json();
                
                if (response.ok && result.success) {
                    // Show OTP input group
                    otpInputGroup.style.display = 'flex';
                    sendBtn.style.display = 'none';
                    
                    // Show success message
                    otpStatus.textContent = 'OTP sent successfully!';
                    otpStatus.className = 'otp-status success';
                    
                    // Start countdown timer (60 seconds)
                    otpState.countdown = 60;
                    otpTimer.style.display = 'flex';
                    
                    if (otpState.timer) clearInterval(otpState.timer);
                    otpState.timer = setInterval(() => {
                        otpState.countdown--;
                        if (countdownSpan) countdownSpan.textContent = otpState.countdown;
                        
                        if (otpState.countdown <= 0) {
                            clearInterval(otpState.timer);
                            otpTimer.style.display = 'none';
                            const resendBtn = document.getElementById('resendStudentOtpBtn');
                            if (resendBtn) resendBtn.style.display = 'block';
                        }
                    }, 1000);
                } else {
                    throw new Error(result.message || 'Failed to send OTP');
                }
            } catch (error) {
                console.error('Error sending OTP:', error);
                showNotification(error.message || 'Failed to send OTP', 'error');
                otpStatus.textContent = error.message || 'Failed to send OTP';
                otpStatus.className = 'otp-status error';
            } finally {
                sendBtn.disabled = false;
                sendBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Send OTP';
            }
        }
        
        // Verify OTP for student phone number
        async function verifyStudentOTP() {
            const otpInput = document.getElementById('studentOtpInput');
            const verifyBtn = document.getElementById('verifyStudentOtpBtn');
            const otpStatus = document.getElementById('studentOtpStatus');
            
            if (!otpInput) {
                showNotification('OTP input not found', 'error');
                return;
            }
            
            const otp = otpInput.value.trim();
            
            if (!otp || otp.length !== 6) {
                showNotification('Please enter a valid 6-digit OTP', 'error');
                return;
            }
            
            // Disable verify button
            verifyBtn.disabled = true;
            verifyBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Verifying...';
            
            try {
                const response = await fetch('/student/profile/verify-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        otp: otp
                    })
                });
                
                const result = await response.json();
                
                if (response.ok && result.success) {
                    // Mark as verified
                    otpState.verified = true;
                    
                    // Update UI
                    otpInput.classList.add('verified');
                    otpInput.readOnly = true;
                    otpStatus.textContent = 'Phone number verified successfully!';
                    otpStatus.className = 'otp-status success';
                    
                    // Lock phone number fields
                    const studentNumberInput = document.querySelector('input[name="studentNumber"]');
                    const studentCountryCodeSelect = document.querySelector('select[name="studentCountryCode"]');
                    if (studentNumberInput) {
                        studentNumberInput.classList.add('otp-locked');
                        studentNumberInput.readOnly = true;
                    }
                    if (studentCountryCodeSelect) {
                        studentCountryCodeSelect.classList.add('otp-locked');
                        studentCountryCodeSelect.disabled = true;
                    }
                    
                    showNotification('Phone number verified successfully!', 'success');
                } else {
                    throw new Error(result.message || 'Invalid OTP');
                }
            } catch (error) {
                console.error('Error verifying OTP:', error);
                showNotification(error.message || 'Invalid OTP. Please try again.', 'error');
                otpStatus.textContent = error.message || 'Invalid OTP';
                otpStatus.className = 'otp-status error';
                otpInput.value = '';
                otpInput.focus();
            } finally {
                verifyBtn.disabled = false;
                verifyBtn.innerHTML = '<i class="fas fa-check"></i> Verify';
            }
        }
        
        // Resend OTP
        function resendStudentOTP() {
            const resendBtn = document.getElementById('resendStudentOtpBtn');
            const otpInputGroup = document.getElementById('studentOtpInputGroup');
            const otpInput = document.getElementById('studentOtpInput');
            
            if (resendBtn) resendBtn.style.display = 'none';
            if (otpInput) otpInput.value = '';
            
            sendStudentOTP();
        }
        
        // Setup OTP event listeners
        function setupOTPListeners() {
            const sendBtn = document.getElementById('sendStudentOtpBtn');
            const verifyBtn = document.getElementById('verifyStudentOtpBtn');
            const resendBtn = document.getElementById('resendStudentOtpBtn');
            const otpInput = document.getElementById('studentOtpInput');
            
            if (sendBtn) {
                sendBtn.addEventListener('click', sendStudentOTP);
            }
            
            if (verifyBtn) {
                verifyBtn.addEventListener('click', verifyStudentOTP);
            }
            
            if (resendBtn) {
                resendBtn.addEventListener('click', resendStudentOTP);
            }
            
            if (otpInput) {
                // Only allow numbers
                otpInput.addEventListener('input', function() {
                    this.value = this.value.replace(/[^\d]/g, '');
                });
                
                // Verify on Enter key
                otpInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        verifyStudentOTP();
                    }
                });
            }
        }

