        let currentImageFile = null;
        
        // OTP State Management
        const originalStudentNumber = '<%= student.studentNumber %>';
        const originalStudentCountryCode = '<%= student.studentCountryCode %>';
        const otpState = {
            verified: false,
            timer: null,
            countdown: 0,
            rateLimitTimer: null,
            rateLimitCountdown: 0
        };

        function toggleEditMode() {
            isEditMode = !isEditMode;
            const formInputs = document.querySelectorAll('#profileForm input, #profileForm select, #profileForm textarea');
            const saveBtn = document.getElementById('saveBtn');
            const cancelBtn = document.getElementById('cancelBtn');
            const editBtn = document.getElementById('editBtn');
            const studentOtpSection = document.getElementById('studentOtpSection');

            if (isEditMode) {
                // Enable editing for specific fields only (phone numbers are blocked)
                const editableFields = ['firstName', 'lastName', 'schoolName', 'grade'];
                const blockedFields = ['studentNumber', 'parentNumber', 'studentCountryCode', 'parentCountryCode'];
                
                formInputs.forEach(input => {
                    // Keep phone fields readonly/disabled
                    if (blockedFields.includes(input.name)) {
                        if (input.tagName === 'SELECT') {
                            input.setAttribute('disabled', 'disabled');
                            input.style.backgroundColor = 'var(--bg-secondary)';
                            input.style.cursor = 'not-allowed';
                        } else {
                            input.setAttribute('readonly', 'readonly');
                            input.style.backgroundColor = 'var(--bg-secondary)';
                            input.style.cursor = 'not-allowed';
                        }
                    } else if (editableFields.includes(input.name)) {
                        if (input.tagName === 'SELECT') {
                            // For select elements, remove disabled attribute
                            input.removeAttribute('disabled');
                            input.style.backgroundColor = 'var(--bg-card)';
                            input.style.cursor = 'pointer';
                        } else {
                            // For input elements, remove readonly attribute
                            input.removeAttribute('readonly');
                            input.style.backgroundColor = 'var(--bg-card)';
                            input.style.cursor = 'text';
                        }
                    }
                });
                
                saveBtn.style.display = 'inline-flex';
                cancelBtn.style.display = 'inline-flex';
                editBtn.innerHTML = '<i class="fas fa-eye"></i>View Mode';
                editBtn.style.background = 'var(--secondary-color)';
                
                // Add success animation to the card
                const profileCard = document.querySelector('.profile-card');
                if (profileCard) {
                    profileCard.classList.add('success-animation');
                }
                
                // Reset OTP state when entering edit mode (hide section)
                // Phone numbers cannot be changed, so OTP section is not needed
                resetOTPState(true);
                
                // Hide OTP section permanently since phone numbers are blocked
                if (studentOtpSection) {
                    studentOtpSection.style.display = 'none';
                }
            } else {
                // Disable editing
                formInputs.forEach(input => {
                    input.setAttribute('readonly', 'readonly');
                    input.style.backgroundColor = 'var(--bg-secondary)';
                    input.style.cursor = 'not-allowed';
                });
                
                saveBtn.style.display = 'none';
                cancelBtn.style.display = 'none';
                editBtn.innerHTML = '<i class="fas fa-edit"></i>Edit Profile';
                editBtn.style.background = 'var(--primary-color)';
                
                // Hide OTP section when exiting edit mode
                if (studentOtpSection) {
                    studentOtpSection.style.display = 'none';
                }
                
                // Reset OTP state (hide section)
                resetOTPState(true);
            }
        }
        
        // Check if phone number has changed
        function hasPhoneNumberChanged() {
            const studentNumberInput = document.querySelector('input[name="studentNumber"]');
            const studentCountryCodeSelect = document.querySelector('select[name="studentCountryCode"]');
            
            if (!studentNumberInput || !studentCountryCodeSelect) return false;
            
            const currentNumber = studentNumberInput.value.replace(/[^\d]/g, '');
            const currentCountryCode = studentCountryCodeSelect.value;
            
            return currentNumber !== originalStudentNumber || currentCountryCode !== originalStudentCountryCode;
        }
        
        // Reset OTP state (but don't hide the section if phone number changed)
        function resetOTPState(hideSection = false) {
            otpState.verified = false;
            if (otpState.timer) {
                clearInterval(otpState.timer);
                otpState.timer = null;
            }
            if (otpState.rateLimitTimer) {
                clearInterval(otpState.rateLimitTimer);
                otpState.rateLimitTimer = null;
            }
            otpState.countdown = 0;
            otpState.rateLimitCountdown = 0;
            
            try {
                const studentOtpInputGroup = document.getElementById('studentOtpInputGroup');
                const studentOtpStatus = document.getElementById('studentOtpStatus');
                const studentOtpTimer = document.getElementById('studentOtpTimer');
                const resendStudentOtpBtn = document.getElementById('resendStudentOtpBtn');
                const sendStudentOtpBtn = document.getElementById('sendStudentOtpBtn');
                const studentOtpInput = document.getElementById('studentOtpInput');
                const studentOtpSection = document.getElementById('studentOtpSection');
                
                // Only hide section if explicitly requested
                if (hideSection && studentOtpSection) {
                    studentOtpSection.style.display = 'none';
                }
                
                if (studentOtpInputGroup) studentOtpInputGroup.style.display = 'none';
                if (studentOtpStatus) studentOtpStatus.textContent = '';
                if (studentOtpTimer) studentOtpTimer.style.display = 'none';
                if (resendStudentOtpBtn) resendStudentOtpBtn.style.display = 'none';
                if (sendStudentOtpBtn) {
                    sendStudentOtpBtn.disabled = false;
                    sendStudentOtpBtn.style.display = 'block';
                }
                if (studentOtpInput) {
                    studentOtpInput.value = '';
                    studentOtpInput.classList.remove('verified');
                    studentOtpInput.readOnly = false;
                }
                
                // Phone fields are always locked - students cannot change them
                const studentNumberInput = document.querySelector('input[name="studentNumber"]');
                const studentCountryCodeSelect = document.querySelector('select[name="studentCountryCode"]');
                if (studentNumberInput) {
                    studentNumberInput.setAttribute('readonly', 'readonly');
                    studentNumberInput.setAttribute('disabled', 'disabled');
                    studentNumberInput.style.backgroundColor = 'var(--bg-secondary)';
                    studentNumberInput.style.cursor = 'not-allowed';
                }
                if (studentCountryCodeSelect) {
                    studentCountryCodeSelect.setAttribute('disabled', 'disabled');
                    studentCountryCodeSelect.style.backgroundColor = 'var(--bg-secondary)';
                    studentCountryCodeSelect.style.cursor = 'not-allowed';
                }
            } catch (error) {
                console.error('Error resetting OTP state:', error);
            }
        }
        
